const title = "Servicios | Estuscode";
const metaTitle = "EstusCode | Servicios Profesionales de Desarrollo Web";
const description = "Desarrollamos soluciones tecnológicas que impulsan el crecimiento de tu negocio. Conoce nuestros servicios de desarrollo web, aplicaciones móviles y software empresarial.";
const url = "https://www.estuscode.com/servicios";
const canonical = "https://www.estuscode.com/servicios";
const keywords = ["EstusCode", "desarrollo web Colombia", "diseño web Cali", "programación web Cali", "desarrollo web Valle del Cauca", "diseño web Bogotá", "programación web personalizada", "desarrollo web freelance", "diseño responsivo", "desarrollo full stack", "landing pages efectivas", "páginas web para negocios", "diseño web profesional", "desarrollo web económico", "servicios web pymes", "creación sitios web", "desarrollo JavaScript", "desarrollo React", "desarrollo Astro", "optimización web", "portafolio digital", "soluciones web pequeñas empresas", "desarrollo web escalable", "servicios SEO Colombia", "diseño UX/UI accesible", "programación frontend", "desarrollo backend Node.js", "aplicaciones web modernas", "tecnologías web 2024", "desarrollo web rápido", "mantenimiento web", "consultoría desarrollo web", "agencia desarrollo web Cali"];
---
<Layout title={title} metaTitle={metaTitle} description={description} url={url} canonical={canonical} keywords={keywords}>
    <section class="py-24 bg-white relative">
        <div class="container mx-auto px-4">
            <div class="max-w-7xl mx-auto">
                <!-- Header Section -->
                <div class="text-center mb-16" data-aos="fade-up">
                    <span class="text-blue-600 font-medium mb-4 block tracking-wider uppercase text-sm">
                        NUESTROS SERVICIOS
                    </span>
                    <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
                        Soluciones Digitales 
                        <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-purple-600">
                            a tu Medida
                        </span>
                    </h1>
                    <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
                        Desarrollamos soluciones tecnológicas que impulsan el crecimiento de tu negocio
                    </p>
                </div>

                <!-- Services Grid -->
                <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
                    {services.map((service, index) => (
                        <a 
                            href={`/servicios/${service.id}`}
                            class="group relative bg-white rounded-2xl overflow-hidden border border-gray-100
                                transition-all duration-500 hover:-translate-y-2 hover:shadow-xl 
                                hover:shadow-blue-500/10"
                            data-aos="fade-up"
                            data-aos-delay={index * 100}
                        >
                            <div class="aspect-video overflow-hidden">
                                <Image
                                    src={service.image.src}
                                    alt={service.image.alt}
                                    loading="lazy"
                                    decoding="async"
                                    class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
                                    width="600"
                                    height="400"
                                />
                            </div>

                            <div class="p-8">
                                <h2 class="text-2xl font-bold text-gray-900 mb-4 
                                    transition-colors duration-300 group-hover:text-blue-600">
                                    {service.title}
                                </h2>
                                <p class="text-gray-600 mb-6 line-clamp-3">
                                    {service.shortDescription}
                                </p>

                                <!-- Features Preview -->
                                <div class="flex flex-wrap gap-2 mb-6">
                                    {service.features.slice(0, 3).map(feature => (
                                        <span class="text-sm px-3 py-1 rounded-full bg-gray-50 
                                            text-gray-600 border border-gray-100
                                            transition-colors duration-300 group-hover:bg-blue-50
                                            group-hover:text-blue-600 group-hover:border-blue-100">
                                            {feature}
                                        </span>
                                    ))}
                                </div>


                                <Button text="Explorar Servicio" isPrimary hasIcon ariaLabel="Explorar Servicio" className="group-hover:bg-blue-600 group-hover:text-white" />
                            </div>
                        </a>
                    ))}
                </div>
            </div>
        </div>
    </section>
</Layout>