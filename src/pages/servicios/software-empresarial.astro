---
import Layout from "../../layouts/Layout.astro";
import Image from "astro/components/Image.astro";

const serviceDetails = {
    title: "Software Empresarial",
    description:
        "Automatizamos y optimizamos los procesos de tu empresa con soluciones de software a medida.",
    image: "https://images.unsplash.com/photo-1460925895917-afdab827c52f?auto=format&fit=crop&q=80",
    sections: [
        {
            title: "Soluciones Empresariales a Medida",
            content:
                "Desarrollamos soluciones empresariales personalizadas que mejoran la eficiencia operativa y impulsan el crecimiento de tu negocio. Nuestro enfoque se centra en crear software que se adapte perfectamente a tus procesos específicos.",
            features: [
                "ERPs personalizados",
                "CRMs a medida",
                "Business Intelligence",
                "Automatización de procesos",
            ],
        },
        {
            title: "Stack Tecnológico Empresarial",
            content:
                "Utilizamos tecnologías robustas y probadas en el mercado empresarial:",
            technologies: [
                {
                    name: "Python & Django",
                    description:
                        "Desarrollo rápido y seguro de aplicaciones empresariales",
                },
                {
                    name: "Java & Spring",
                    description:
                        "Soluciones empresariales robustas y escalables",
                },
                {
                    name: "Docker & Kubernetes",
                    description:
                        "Contenedorización y orquestación de servicios",
                },
                {
                    name: "AWS & Cloud",
                    description:
                        "Infraestructura escalable y servicios en la nube",
                },
            ],
        },
    ],
    benefits: [
        {
            title: "Escalabilidad",
            description:
                "Soluciones que crecen junto con tu empresa sin comprometer el rendimiento",
        },
        {
            title: "Integración",
            description:
                "Conectividad perfecta con tus sistemas y herramientas existentes",
        },
        {
            title: "Análisis en Tiempo Real",
            description:
                "Dashboards y reportes actualizados para mejor toma de decisiones",
        },
        {
            title: "Soporte 24/7",
            description:
                "Asistencia técnica continua y mantenimiento proactivo",
        },
    ],
    features: [
        {
            title: "Automatización de Procesos",
            description:
                "Reduce errores y optimiza el tiempo de tu equipo con flujos de trabajo automatizados",
        },
        {
            title: "Gestión de Datos",
            description:
                "Centraliza y organiza la información crítica de tu empresa",
        },
        {
            title: "Reportes Personalizados",
            description:
                "Visualiza los KPIs importantes para tu negocio en tiempo real",
        },
        {
            title: "Seguridad Empresarial",
            description:
                "Protección avanzada de datos y cumplimiento normativo",
        },
    ],
};

const title = "EstusCode | " + serviceDetails.title;
const metaTitle = "EstusCode | Software Empresarial y Soluciones a Medida";
const description = serviceDetails.description;
const url = "https://www.estuscode.com/servicios/software-empresarial";
const canonical = "https://www.estuscode.com/servicios/software-empresarial";
const keywords = [
    "Software Empresarial",
    "ERP Personalizado",
    "CRM a Medida",
    "Business Intelligence",
    "Automatización Procesos",
    "Python",
    "Java",
    "Docker",
    "AWS",
    "Desarrollo Software Empresarial",
    "Soluciones Empresariales",
];
---

<Layout
    title={title}
    metaTitle={metaTitle}
    description={description}
    url={url}
    canonical={canonical}
    keywords={keywords}
>
    <article class="bg-white">
        <!-- Hero Section -->
        <div class="py-24">
            <Image
                src={serviceDetails.image}
                width={800}
                height={400}
                loading="eager"
                decoding="async"
                alt="Software empresarial profesional"
                class="rounded-xl object-cover mx-auto"
            />
        </div>

        <!-- Content -->
        <main class="container mx-auto px-4">
            <div class="max-w-4xl mx-auto">
                {
                    serviceDetails.sections.map((section) => (
                        <section class="mb-16" data-aos="fade-up">
                            <h2 class="text-3xl font-bold text-gray-900 mb-6">
                                {section.title}
                            </h2>
                            <p class="text-xl text-gray-600 mb-8 leading-relaxed">
                                {section.content}
                            </p>

                            {section.features && (
                                <ul
                                    class="grid sm:grid-cols-2 gap-6"
                                    role="list"
                                >
                                    {section.features.map((feature) => (
                                        <li class="flex items-start space-x-4">
                                            <span
                                                class="flex-shrink-0 text-blue-600"
                                                aria-hidden="true"
                                            >
                                                <svg
                                                    class="w-6 h-6"
                                                    fill="none"
                                                    viewBox="0 0 24 24"
                                                    stroke="currentColor"
                                                >
                                                    <path
                                                        stroke-linecap="round"
                                                        stroke-linejoin="round"
                                                        stroke-width="2"
                                                        d="M5 13l4 4L19 7"
                                                    />
                                                </svg>
                                            </span>
                                            <span class="text-lg text-gray-700">
                                                {feature}
                                            </span>
                                        </li>
                                    ))}
                                </ul>
                            )}

                            {section.technologies && (
                                <div class="grid sm:grid-cols-2 gap-6">
                                    {section.technologies.map((tech) => (
                                        <div class="p-6 rounded-xl bg-gray-50 hover:bg-gray-100 transition-all duration-300">
                                            <h3 class="font-semibold text-lg text-gray-900 mb-2">
                                                {tech.name}
                                            </h3>
                                            <p class="text-gray-600">
                                                {tech.description}
                                            </p>
                                        </div>
                                    ))}
                                </div>
                            )}
                        </section>
                    ))
                }

                <!-- Características Destacadas -->
                <section class="mb-16" data-aos="fade-up">
                    <h2 class="text-3xl font-bold text-gray-900 mb-8">
                        Características del Software Empresarial
                    </h2>
                    <div class="grid sm:grid-cols-2 gap-6">
                        {
                            serviceDetails.features.map((feature) => (
                                <div
                                    class="p-6 rounded-xl bg-white border border-gray-100 
                                hover:shadow-xl hover:shadow-blue-500/10 transition-all duration-300"
                                >
                                    <h3 class="font-semibold text-xl text-gray-900 mb-3">
                                        {feature.title}
                                    </h3>
                                    <p class="text-gray-600">
                                        {feature.description}
                                    </p>
                                </div>
                            ))
                        }
                    </div>
                </section>

                <!-- Beneficios -->
                <section class="mb-16" data-aos="fade-up">
                    <h2 class="text-3xl font-bold text-gray-900 mb-8">
                        Beneficios del Software Empresarial
                    </h2>
                    <div class="grid sm:grid-cols-2 gap-6">
                        {
                            serviceDetails.benefits.map((benefit) => (
                                <div
                                    class="p-6 rounded-xl bg-white border border-gray-100 
                                hover:shadow-xl hover:shadow-blue-500/10 transition-all duration-300"
                                >
                                    <h3 class="font-semibold text-xl text-gray-900 mb-3">
                                        {benefit.title}
                                    </h3>
                                    <p class="text-gray-600">
                                        {benefit.description}
                                    </p>
                                </div>
                            ))
                        }
                    </div>
                </section>
            </div>
        </main>
    </article>
</Layout>
