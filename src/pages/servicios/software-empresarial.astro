---
import Layout from "../../layouts/Layout.astro";
import Image from "astro/components/Image.astro";
import Button from "../../ui/Button.astro";

const serviceDetails = {
    title: "Software Empresarial a Medida para Colombia",
    description:
        "Desarrollamos soluciones de software empresarial personalizadas para empresas colombianas. Automatizamos procesos y potenciamos el crecimiento de tu negocio.",
    image: "https://images.unsplash.com/photo-1460925895917-afdab827c52f?auto=format&fit=crop&q=80",
    sections: [
        {
            title: "Soluciones Empresariales para el Mercado Colombiano",
            content:
                "Desarrollamos software empresarial adaptado a las normativas y necesidades específicas del mercado colombiano. Creamos soluciones que optimizan operaciones, automatizan procesos y potencian el crecimiento de empresas en Cali, Valle del Cauca y toda Colombia.",
            features: [
                "ERPs personalizados con cumplimiento normativo colombiano",
                "CRMs adaptados al ciclo de ventas local",
                "Business Intelligence con KPIs relevantes para el mercado colombiano",
                "Automatización de procesos según estándares nacionales",
            ],
        },
        {
            title: "Tecnologías de Clase Mundial para Empresas Colombianas",
            content:
                "Utilizamos tecnologías robustas y probadas que garantizan la seguridad, estabilidad y escalabilidad que las empresas colombianas necesitan:",
            technologies: [
                {
                    name: "Python & Django",
                    description:
                        "Desarrollo ágil con alta seguridad, ideal para sistemas financieros y gubernamentales colombianos",
                },
                {
                    name: "Java & Spring",
                    description:
                        "Soluciones empresariales robustas para grandes corporaciones nacionales",
                },
                {
                    name: "Docker & Kubernetes",
                    description:
                        "Despliegue optimizado para infraestructura local colombiana",
                },
                {
                    name: "AWS & Cloud Colombia",
                    description:
                        "Infraestructura en la nube con cumplimiento de normativas nacionales de seguridad de datos",
                },
            ],
        },
    ],
    benefits: [
        {
            title: "Escalabilidad para empresas colombianas",
            description:
                "Software que crece con tu empresa, desde PyMEs del Valle del Cauca hasta corporaciones nacionales",
        },
        {
            title: "Integración con sistemas locales",
            description:
                "Conectividad garantizada con plataformas gubernamentales, bancos y servicios colombianos",
        },
        {
            title: "Análisis adaptado al contexto nacional",
            description:
                "Dashboards y reportes con métricas relevantes para el mercado colombiano",
        },
        {
            title: "Soporte local en Colombia",
            description:
                "Asistencia técnica en español con presencia en Cali y soporte remoto nacional",
        },
    ],
    features: [
        {
            title: "Facturación Electrónica DIAN",
            description:
                "Implementación completa del sistema de facturación electrónica según normativas colombianas vigentes",
        },
        {
            title: "Gestión de Datos con protección de Habeas Data",
            description:
                "Cumplimiento con la Ley 1581 de protección de datos personales en Colombia",
        },
        {
            title: "Reportes para entidades reguladoras",
            description:
                "Generación automática de informes para DIAN, Supersociedades y otras entidades colombianas",
        },
        {
            title: "Seguridad adaptada a riesgos locales",
            description:
                "Protección contra amenazas específicas del entorno digital colombiano",
        },
    ],
    casosExito: [
        {
            industria: "Manufactura colombiana",
            resultado:
                "Reducción del 40% en costos operativos para empresa industrial en Valle del Cauca tras implementar ERP a medida",
        },
        {
            industria: "Servicios financieros",
            resultado:
                "Aumento del 60% en eficiencia operativa para cooperativa financiera con presencia en 5 departamentos de Colombia",
        },
        {
            industria: "Distribución comercial",
            resultado:
                "Implementación de sistema logístico que redujo tiempos de entrega en 35% para distribuidor nacional",
        },
    ],
};

// Metadatos optimizados para SEO
const title =
    "Software Empresarial a Medida para Compañías Colombianas | Nexen";
const metaTitle =
    "Software Empresarial para Empresas Colombianas | Soluciones a Medida | Nexen";
const description =
    "Desarrollamos software empresarial personalizado para compañías en Colombia. ERP, CRM y sistemas a medida adaptados a normativas y necesidades locales. Expertos en Cali.";
const url = "https://www.nexen.com.co/servicios/software-empresarial";
const canonical = "https://www.nexen.com.co/servicios/software-empresarial";
// Keywords optimizadas
const keywords = [
    "software empresarial Colombia",
    "ERP empresas colombianas",
    "CRM personalizado Colombia",
    "sistemas a medida Cali",
    "software facturación electrónica DIAN",
    "automatización procesos empresariales Valle del Cauca",
];
---

<Layout
    title={title}
    metaTitle={metaTitle}
    description={description}
    url={url}
    canonical={canonical}
    keywords={keywords}
>
    <article
        class="bg-[#E0E1DD]"
        itemscope
        itemtype="https://schema.org/Service"
    >
        <meta itemprop="serviceType" content="Software Empresarial" />
        <meta itemprop="provider" content="Nexen" />
        <meta itemprop="areaServed" content="Colombia" />

        <!-- Hero Section Mejorada -->
        <section
            class="relative py-24 bg-gradient-to-r from-[#0D1B2A] to-[#1B263B]"
        >
            <div class="container mx-auto px-4">
                <div class="max-w-6xl mx-auto">
                    <div class="grid md:grid-cols-2 gap-12 items-center">
                        <div data-aos="fade-right">
                            <h1
                                class="text-4xl md:text-5xl font-bold text-[#E0E1DD] mb-6"
                                itemprop="name"
                            >
                                Software Empresarial para <span
                                    class="text-[#778DA9]">Colombia</span
                                >
                            </h1>
                            <p
                                class="text-xl text-[#E0E1DD]/90 mb-8 leading-relaxed"
                                itemprop="description"
                            >
                                Desarrollamos soluciones de software a medida
                                que automatizan procesos y potencian el
                                crecimiento de empresas en <strong
                                    class="text-[#E0E1DD]">Cali</strong
                                > y toda Colombia, cumpliendo con normativas nacionales.
                            </p>
                            <Button
                                text="Solicitar Asesoría Gratuita"
                                href="/#contacto"
                                className="bg-[#415A77] hover:bg-[#778DA9] text-[#E0E1DD] border-0"
                                hasIcon
                                ariaLabel="Solicitar asesoría sobre software empresarial"
                            />
                        </div>
                        <div data-aos="fade-left">
                            <Image
                                src={serviceDetails.image}
                                width={600}
                                height={400}
                                loading="eager"
                                decoding="async"
                                alt="Software empresarial para empresas colombianas"
                                class="rounded-xl object-cover shadow-xl"
                                itemprop="image"
                            />
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Content -->
        <main class="container mx-auto px-4 py-16">
            <div class="max-w-4xl mx-auto">
                {
                    serviceDetails.sections.map((section) => (
                        <section class="mb-16" data-aos="fade-up">
                            <h2 class="text-3xl font-bold text-[#0D1B2A] mb-6">
                                {section.title}
                            </h2>
                            <p class="text-xl text-[#1B263B] mb-8 leading-relaxed">
                                {section.content}
                            </p>

                            {section.features && (
                                <ul
                                    class="grid sm:grid-cols-2 gap-6 mb-8"
                                    role="list"
                                >
                                    {section.features.map((feature) => (
                                        <li class="flex items-start space-x-4">
                                            <span
                                                class="flex-shrink-0 text-[#415A77]"
                                                aria-hidden="true"
                                            >
                                                <svg
                                                    class="w-6 h-6"
                                                    fill="none"
                                                    viewBox="0 0 24 24"
                                                    stroke="currentColor"
                                                >
                                                    <path
                                                        stroke-linecap="round"
                                                        stroke-linejoin="round"
                                                        stroke-width="2"
                                                        d="M5 13l4 4L19 7"
                                                    />
                                                </svg>
                                            </span>
                                            <span class="text-lg text-[#1B263B]">
                                                {feature}
                                            </span>
                                        </li>
                                    ))}
                                </ul>
                            )}

                            {section.technologies && (
                                <div class="grid sm:grid-cols-2 gap-6">
                                    {section.technologies.map((tech) => (
                                        <div class="p-6 rounded-xl bg-white border border-[#778DA9]/20 hover:shadow-lg hover:shadow-[#415A77]/5 transition-all duration-300">
                                            <h3 class="font-semibold text-lg text-[#0D1B2A] mb-2">
                                                {tech.name}
                                            </h3>
                                            <p class="text-[#1B263B]">
                                                {tech.description}
                                            </p>
                                        </div>
                                    ))}
                                </div>
                            )}
                        </section>
                    ))
                }

                <!-- Características Destacadas -->
                <section class="mb-16" data-aos="fade-up">
                    <h2 class="text-3xl font-bold text-[#0D1B2A] mb-8">
                        Soluciones Adaptadas a Necesidades Colombianas
                    </h2>
                    <div class="grid sm:grid-cols-2 gap-6">
                        {
                            serviceDetails.features.map((feature) => (
                                <div
                                    class="p-6 rounded-xl bg-white border border-[#778DA9]/20 
                                    hover:shadow-xl hover:shadow-[#415A77]/10 transition-all duration-300"
                                    itemprop="serviceOutput"
                                >
                                    <h3 class="font-semibold text-xl text-[#0D1B2A] mb-3">
                                        {feature.title}
                                    </h3>
                                    <p class="text-[#1B263B]">
                                        {feature.description}
                                    </p>
                                </div>
                            ))
                        }
                    </div>
                </section>

                <!-- Beneficios -->
                <section class="mb-16" data-aos="fade-up">
                    <h2 class="text-3xl font-bold text-[#0D1B2A] mb-8">
                        Beneficios para Empresas Colombianas
                    </h2>
                    <div class="grid sm:grid-cols-2 gap-6">
                        {
                            serviceDetails.benefits.map((benefit) => (
                                <div
                                    class="p-6 rounded-xl bg-white border border-[#778DA9]/20 
                                    hover:shadow-xl hover:shadow-[#415A77]/10 transition-all duration-300"
                                >
                                    <h3 class="font-semibold text-xl text-[#0D1B2A] mb-3">
                                        {benefit.title}
                                    </h3>
                                    <p class="text-[#1B263B]">
                                        {benefit.description}
                                    </p>
                                </div>
                            ))
                        }
                    </div>
                </section>

                <!-- Nueva sección: Casos de éxito en Colombia -->
                <section
                    class="mb-16 p-8 bg-[#778DA9]/10 rounded-2xl border border-[#778DA9]/20"
                    data-aos="fade-up"
                >
                    <h2 class="text-3xl font-bold text-[#0D1B2A] mb-8">
                        Casos de Éxito en Colombia
                    </h2>
                    <div class="space-y-6">
                        {
                            serviceDetails.casosExito.map((caso) => (
                                <div class="bg-white p-6 rounded-xl shadow-sm border border-[#778DA9]/10">
                                    <div class="flex items-start">
                                        <div class="flex-shrink-0 mr-4">
                                            <svg
                                                class="w-8 h-8 text-[#415A77]"
                                                fill="none"
                                                viewBox="0 0 24 24"
                                                stroke="currentColor"
                                            >
                                                <path
                                                    stroke-linecap="round"
                                                    stroke-linejoin="round"
                                                    stroke-width="2"
                                                    d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                                                />
                                            </svg>
                                        </div>
                                        <div>
                                            <h3 class="font-bold text-lg text-[#0D1B2A] mb-2">
                                                Industria: {caso.industria}
                                            </h3>
                                            <p class="text-[#1B263B]">
                                                {caso.resultado}
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            ))
                        }
                    </div>
                </section>

                <!-- CTA -->
                <section
                    class="text-center p-8 mb-16 bg-gradient-to-r from-[#0D1B2A] to-[#1B263B] rounded-2xl text-[#E0E1DD]"
                    data-aos="fade-up"
                >
                    <h2 class="text-3xl font-bold mb-4">
                        ¿Listo para optimizar tu empresa en Colombia?
                    </h2>
                    <p class="text-xl mb-8 max-w-3xl mx-auto opacity-90">
                        Contáctanos hoy para una evaluación gratuita sobre cómo
                        podemos automatizar y optimizar tus procesos
                        empresariales con software a medida.
                    </p>
                    <Button
                        text="Agendar Consulta Gratuita"
                        href="/#contacto"
                        className="bg-[#E0E1DD] text-[#0D1B2A] hover:bg-[#778DA9]/90 hover:text-[#0D1B2A] shadow-xl border-0"
                        ariaLabel="Agendar consulta sobre software empresarial"
                    />
                </section>
            </div>
        </main>

        <!-- Schema.org adicional -->
        <script type="application/ld+json">
            {
                "@context": "https://schema.org",
                "@type": "Service",
                "name": "Software Empresarial a Medida para Colombia",
                "description": "Desarrollamos soluciones de software empresarial personalizadas para empresas colombianas. Automatizamos procesos y potenciamos el crecimiento de tu negocio.",
                "provider": {
                    "@type": "Organization",
                    "name": "Nexen",
                    "url": "https://www.nexen.com.co"
                },
                "areaServed": ["Cali", "Valle del Cauca", "Bogotá", "Colombia"],
                "serviceType": "Software Empresarial",
                "offers": {
                    "@type": "Offer",
                    "price": "20000000",
                    "priceCurrency": "COP",
                    "availability": "https://schema.org/InStock"
                },
                "serviceOutput": [
                    "ERPs personalizados",
                    "CRMs a medida",
                    "Sistemas de Business Intelligence",
                    "Automatización de procesos empresariales",
                    "Software de facturación electrónica DIAN"
                ],
                "hoursAvailable": "Mo,Tu,We,Th,Fr 08:00-18:00",
                "availableLanguage": ["Spanish", "English"]
            }
        </script>
    </article>
</Layout>
