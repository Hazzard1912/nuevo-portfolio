---
import Layout from "../../layouts/Layout.astro";
import CTA from "../../components/CTA.astro";
import Image from "astro/components/Image.astro";

const serviceDetails = {
    title: "Desarrollo Web Profesional",
    description:
        "Creamos soluciones web personalizadas que impulsan el crecimiento de tu negocio",
    image: "https://images.unsplash.com/photo-1498050108023-c5249f4df085?auto=format&fit=crop&q=80",
    sections: [
        {
            title: "Soluciones Web a Medida",
            content:
                "Desarrollamos sitios web únicos que reflejan la identidad de tu marca y cumplen objetivos específicos de negocio. Utilizamos las últimas tecnologías para garantizar rendimiento, seguridad y escalabilidad.",
            features: [
                "Diseño web responsive",
                "Optimización SEO",
                "Integración con APIs",
                "Gestión de contenidos",
            ],
        },
        {
            title: "Tecnologías Que Utilizamos",
            content:
                "Trabajamos con un stack tecnológico moderno y probado que garantiza el mejor rendimiento y mantenibilidad:",
            technologies: [
                {
                    name: "React & Next.js",
                    description:
                        "Para interfaces dinámicas y aplicaciones web modernas",
                },
                {
                    name: "Astro",
                    description:
                        "Rendimiento óptimo y velocidad de carga excepcional",
                },
                {
                    name: "Node.js",
                    description: "Backend robusto y escalable",
                },
                {
                    name: "TypeScript",
                    description: "Código más seguro y mantenible",
                },
            ],
        },
    ],
    benefits: [
        {
            title: "Alto Rendimiento",
            description:
                "Sitios web optimizados para cargar en menos de 3 segundos",
        },
        {
            title: "SEO Optimizado",
            description:
                "Mejor posicionamiento en buscadores desde el primer día",
        },
        {
            title: "Diseño Responsivo",
            description: "Experiencia perfecta en todos los dispositivos",
        },
        {
            title: "Seguridad Avanzada",
            description: "Protección contra vulnerabilidades y amenazas web",
        },
    ],
};
---

<Layout>
    <article class="bg-white">
        <div class="py-24">
            <Image
                src={serviceDetails.image}
                width={800}
                height={400}
                loading="eager"
                decoding="async"
                alt="Desarrollo web profesional"
                class="rounded-xl object-cover mx-auto"
            />
        </div>

        <main class="container mx-auto px-4">
            <div class="max-w-4xl mx-auto">
                {
                    serviceDetails.sections.map((section) => (
                        <section class="mb-16" data-aos="fade-up">
                            <h2 class="text-3xl font-bold text-gray-900 mb-6">
                                {section.title}
                            </h2>
                            <p class="text-xl text-gray-600 mb-8 leading-relaxed">
                                {section.content}
                            </p>

                            {section.features && (
                                <ul
                                    class="grid sm:grid-cols-2 gap-6"
                                    role="list"
                                >
                                    {section.features.map((feature) => (
                                        <li class="flex items-start space-x-4">
                                            <span
                                                class="flex-shrink-0 text-blue-600"
                                                aria-hidden="true"
                                            >
                                                <svg
                                                    class="w-6 h-6"
                                                    fill="none"
                                                    viewBox="0 0 24 24"
                                                    stroke="currentColor"
                                                >
                                                    <path
                                                        stroke-linecap="round"
                                                        stroke-linejoin="round"
                                                        stroke-width="2"
                                                        d="M5 13l4 4L19 7"
                                                    />
                                                </svg>
                                            </span>
                                            <span class="text-lg text-gray-700">
                                                {feature}
                                            </span>
                                        </li>
                                    ))}
                                </ul>
                            )}

                            {section.technologies && (
                                <div class="grid sm:grid-cols-2 gap-6">
                                    {section.technologies.map((tech) => (
                                        <div class="p-6 rounded-xl bg-gray-50 hover:bg-gray-100 transition-all duration-300">
                                            <h3 class="font-semibold text-lg text-gray-900 mb-2">
                                                {tech.name}
                                            </h3>
                                            <p class="text-gray-600">
                                                {tech.description}
                                            </p>
                                        </div>
                                    ))}
                                </div>
                            )}
                        </section>
                    ))
                }

                <section class="mb-16" data-aos="fade-up">
                    <h2 class="text-3xl font-bold text-gray-900 mb-8">
                        Beneficios del Desarrollo Web Profesional
                    </h2>
                    <div class="grid sm:grid-cols-2 gap-6">
                        {
                            serviceDetails.benefits.map((benefit) => (
                                <div
                                    class="p-6 rounded-xl bg-white border border-gray-100 
                                hover:shadow-xl hover:shadow-blue-500/10 transition-all duration-300"
                                >
                                    <h3 class="font-semibold text-xl text-gray-900 mb-3">
                                        {benefit.title}
                                    </h3>
                                    <p class="text-gray-600">
                                        {benefit.description}
                                    </p>
                                </div>
                            ))
                        }
                    </div>
                </section>
            </div>
        </main>
    </article>
</Layout>
