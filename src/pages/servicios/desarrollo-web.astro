---
import Layout from "../../layouts/Layout.astro";
import { Image } from "astro:assets";
import Button from "../../ui/Button.astro";

import webDevImage from "../../assets/images/services/web-development.avif";

const serviceDetails = {
    title: "Desarrollo Web Profesional en Colombia",
    description:
        "Creamos sitios web personalizados en Cali y toda Colombia que impulsan el crecimiento de tu negocio. Expertos en React, Astro y optimización SEO.",
    image: webDevImage,
    sections: [
        {
            title: "Desarrollo Web a Medida para Empresas Colombianas",
            content:
                "Desarrollamos sitios web únicos que reflejan la identidad de tu marca y cumplen objetivos específicos de negocio. Nuestro equipo en Cali crea soluciones digitales con rendimiento excepcional y optimizadas para el mercado colombiano.",
            features: [
                "Diseño web responsive para todos los dispositivos",
                "Optimización SEO para posicionamiento local",
                "Integración con sistemas de pago colombianos",
                "Gestión de contenidos intuitiva",
                "Soporte técnico continuo",
                "Hosting y dominio incluidos",
            ],
        },
        {
            title: "Tecnologías de Vanguardia",
            content:
                "Trabajamos con un stack tecnológico moderno que garantiza el mejor rendimiento, crucial para el mercado digital en Colombia:",
            technologies: [
                {
                    name: "React & Next.js",
                    description:
                        "Interfaces dinámicas que mejoran la experiencia de usuario y las conversiones",
                },
                {
                    name: "Astro",
                    description:
                        "Velocidad de carga ultrarrápida (menos de 1 segundo) para mejor SEO y retención",
                },
                {
                    name: "Node.js",
                    description:
                        "Backend robusto adaptado a los requerimientos de empresas colombianas",
                },
                {
                    name: "TypeScript",
                    description:
                        "Desarrollo seguro y mantenible con menos errores y mejor escalabilidad",
                },
            ],
        },
    ],
    benefits: [
        {
            title: "Alto Rendimiento",
            description:
                "Sitios web optimizados que cargan en menos de 2 segundos, crucial para el usuario colombiano con diversas conexiones",
        },
        {
            title: "SEO Local Optimizado",
            description:
                "Mejor posicionamiento en Google Colombia y otros buscadores desde el primer día",
        },
        {
            title: "Diseño Responsivo",
            description:
                "Experiencia perfecta en todos los dispositivos, adaptada al creciente uso móvil en Colombia",
        },
        {
            title: "Seguridad Avanzada",
            description:
                "Protección contra vulnerabilidades y amenazas web según normativas colombianas de protección de datos",
        },
    ],
    preguntasFrecuentes: [
        {
            pregunta: "¿Cuánto tiempo toma desarrollar un sitio web?",
            respuesta:
                "El tiempo de desarrollo varía según la complejidad del proyecto. Un sitio web básico puede tomar 4-6 semanas, mientras que proyectos más complejos pueden extenderse a 2-3 meses.",
        },
        {
            pregunta: "¿Qué incluye el servicio de desarrollo web?",
            respuesta:
                "Nuestro servicio incluye diseño personalizado, desarrollo responsive, optimización SEO, integración de sistemas de pago, capacitación en el uso del CMS, hosting y dominio por el primer año, y soporte técnico continuo.",
        },
        {
            pregunta: "¿Ofrecen mantenimiento después del lanzamiento?",
            respuesta:
                "Sí, ofrecemos planes de mantenimiento mensual que incluyen actualizaciones de seguridad, respaldos, monitoreo de rendimiento y soporte técnico prioritario.",
        },
    ],
};

// Metadatos optimizados
const title = "Desarrollo Web Profesional en Colombia | Nexen";
const metaTitle = "Desarrollo Web en Colombia | Expertos Cali | Nexen";
const description =
    "Servicios profesionales de desarrollo web en Cali y Colombia. Creamos sitios web ultra-rápidos con Astro y React que aumentan ventas y conversiones. ¡Cotiza gratis!";
const url = "https://www.nexen.com.co/servicios/desarrollo-web/";
const canonical = "https://www.nexen.com.co/servicios/desarrollo-web/";
// Keywords focalizadas
const keywords = [
    "desarrollo web Colombia",
    "diseño web Cali",
    "sitios web profesionales Valle del Cauca",
    "desarrollo Astro React",
    "páginas web empresariales Colombia",
    "desarrollo web responsive",
    "creación de sitios web",
    "desarrollo web a medida",
    "desarrollo web Cali",
    "empresa desarrollo web Colombia",
];
---

<Layout
    title={title}
    metaTitle={metaTitle}
    description={description}
    url={url}
    canonical={canonical}
    keywords={keywords}
>
    <article
        class="bg-[#E0E1DD]"
        itemscope
        itemtype="https://schema.org/Service"
    >
        <meta itemprop="serviceType" content="Desarrollo Web" />
        <meta itemprop="provider" content="Nexen" />
        <meta itemprop="areaServed" content="Colombia" />

        <!-- Hero Section Mejorada -->
        <section
            class="relative py-12 md:py-24 bg-gradient-to-r from-[#0D1B2A] to-[#1B263B]"
        >
            <div class="container mx-auto px-4">
                <div class="max-w-6xl mx-auto">
                    <div
                        class="grid md:grid-cols-2 gap-8 md:gap-12 items-center"
                    >
                        <div>
                            <h1
                                class="text-3xl md:text-5xl font-bold text-[#E0E1DD] mb-4 md:mb-6 text-[1.875rem] md:text-[3rem]"
                                itemprop="name"
                            >
                                Desarrollo Web Profesional en <span
                                    class="text-[#778DA9]">Colombia</span
                                >
                            </h1>
                            <p
                                class="text-lg md:text-xl text-[#E0E1DD]/90 mb-6 md:mb-8 leading-relaxed"
                                itemprop="description"
                            >
                                Creamos sitios web de alto rendimiento que
                                impulsan el crecimiento de tu empresa en <strong
                                    class="text-[#E0E1DD]">Cali</strong
                                > y todo el país. Especialistas en tecnologías modernas
                                y optimización para el mercado local.
                            </p>
                            <Button
                                text="Solicitar Presupuesto Gratuito"
                                href="/#contacto"
                                className="bg-[#415A77] hover:bg-[#778DA9] text-[#E0E1DD] border-0 w-full md:w-auto"
                                hasIcon
                                ariaLabel="Solicitar presupuesto para desarrollo web"
                            />
                        </div>
                        <div class="mt-8 md:mt-0">
                            <Image
                                format="webp"
                                src={serviceDetails.image}
                                width={600}
                                height={300}
                                loading="eager"
                                decoding="async"
                                fetchpriority="high"
                                quality={75}
                                sizes="(max-width: 768px) 100vw, 50vw"
                                alt="Desarrollo web profesional en Colombia"
                                class="rounded-xl object-cover shadow-xl w-full h-auto"
                                itemprop="image"
                            />
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Content Principal -->
        <main class="container mx-auto px-4 py-8 md:py-16">
            <div class="max-w-4xl mx-auto">
                {
                    serviceDetails.sections.map((section) => (
                        <section class="mb-12 md:mb-16">
                            <h2 class="text-2xl md:text-3xl font-bold text-[#0D1B2A] mb-4 md:mb-6">
                                {section.title}
                            </h2>
                            <p class="text-lg md:text-xl text-[#1B263B] mb-6 md:mb-8 leading-relaxed">
                                {section.content}
                            </p>

                            {section.features && (
                                <ul
                                    class="grid sm:grid-cols-2 gap-6 mb-8"
                                    role="list"
                                >
                                    {section.features.map((feature) => (
                                        <li class="flex items-start space-x-4">
                                            <span
                                                class="flex-shrink-0 text-[#415A77]"
                                                aria-hidden="true"
                                            >
                                                <svg
                                                    class="w-6 h-6"
                                                    fill="none"
                                                    viewBox="0 0 24 24"
                                                    stroke="currentColor"
                                                >
                                                    <path
                                                        stroke-linecap="round"
                                                        stroke-linejoin="round"
                                                        stroke-width="2"
                                                        d="M5 13l4 4L19 7"
                                                    />
                                                </svg>
                                            </span>
                                            <span class="text-lg text-[#1B263B]">
                                                {feature}
                                            </span>
                                        </li>
                                    ))}
                                </ul>
                            )}

                            {section.technologies && (
                                <div class="grid sm:grid-cols-2 gap-6">
                                    {section.technologies.map((tech) => (
                                        <div class="p-6 rounded-xl bg-white border border-[#778DA9]/20 hover:shadow-lg hover:shadow-[#415A77]/5 transition-all duration-300">
                                            <h3 class="font-semibold text-lg text-[#0D1B2A] mb-2">
                                                {tech.name}
                                            </h3>
                                            <p class="text-[#1B263B]">
                                                {tech.description}
                                            </p>
                                        </div>
                                    ))}
                                </div>
                            )}
                        </section>
                    ))
                }

                <!-- Beneficios con microdatos -->
                <section class="mb-16" data-aos="fade-up">
                    <h2 class="text-3xl font-bold text-[#0D1B2A] mb-8">
                        Beneficios del Desarrollo Web Profesional
                    </h2>
                    <div class="grid sm:grid-cols-2 gap-6">
                        {
                            serviceDetails.benefits.map((benefit) => (
                                <div
                                    class="p-6 rounded-xl bg-white border border-[#778DA9]/20 
                                    hover:shadow-xl hover:shadow-[#415A77]/10 transition-all duration-300"
                                    itemprop="serviceOutput"
                                >
                                    <h3 class="font-semibold text-xl text-[#0D1B2A] mb-3">
                                        {benefit.title}
                                    </h3>
                                    <p class="text-[#1B263B]">
                                        {benefit.description}
                                    </p>
                                </div>
                            ))
                        }
                    </div>
                </section>

                <!-- Reemplazamos la sección de casos de éxito por Preguntas Frecuentes -->
                <section
                    class="mb-16 p-8 bg-[#778DA9]/10 rounded-2xl border border-[#778DA9]/20"
                    data-aos="fade-up"
                >
                    <h2 class="text-3xl font-bold text-[#0D1B2A] mb-8">
                        Preguntas Frecuentes sobre Desarrollo Web
                    </h2>
                    <div class="space-y-6">
                        {
                            serviceDetails.preguntasFrecuentes.map((faq) => (
                                <div class="bg-white p-6 rounded-xl shadow-sm border border-[#778DA9]/10">
                                    <div class="flex items-start">
                                        <div class="flex-shrink-0 mr-4">
                                            <svg
                                                class="w-8 h-8 text-[#415A77]"
                                                fill="none"
                                                viewBox="0 0 24 24"
                                                stroke="currentColor"
                                            >
                                                <path
                                                    stroke-linecap="round"
                                                    stroke-linejoin="round"
                                                    stroke-width="2"
                                                    d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                                                />
                                            </svg>
                                        </div>
                                        <div>
                                            <h3 class="font-bold text-lg text-[#0D1B2A] mb-2">
                                                {faq.pregunta}
                                            </h3>
                                            <p class="text-[#1B263B]">
                                                {faq.respuesta}
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            ))
                        }
                    </div>
                </section>

                <!-- CTA mejorado -->
                <section
                    class="text-center p-8 mb-16 bg-gradient-to-r from-[#0D1B2A] to-[#1B263B] rounded-2xl text-[#E0E1DD]"
                    data-aos="fade-up"
                >
                    <h2 class="text-3xl font-bold mb-4">
                        ¿Listo para transformar tu presencia digital?
                    </h2>
                    <p class="text-xl mb-8 max-w-3xl mx-auto opacity-90">
                        Agenda una consultoría gratuita y descubre cómo podemos
                        ayudarte a crear un sitio web que impulse tu negocio en
                        el mercado digital colombiano.
                    </p>
                    <div class="flex flex-col sm:flex-row gap-4 justify-center">
                        <Button
                            text="Solicitar Consultoría Gratuita"
                            href="/#contacto"
                            className="bg-[#E0E1DD] text-[#0D1B2A] hover:bg-[#778DA9]/90 hover:text-[#0D1B2A] shadow-xl border-0"
                            ariaLabel="Solicitar consultoría gratuita para desarrollo web"
                        />
                        <Button
                            text="Ver Portafolio"
                            href="/#portfolio"
                            className="bg-transparent border-2 border-[#E0E1DD] text-[#E0E1DD] hover:bg-[#E0E1DD]/10"
                            ariaLabel="Ver portafolio de desarrollo web"
                        />
                    </div>
                </section>
            </div>
        </main>

        <!-- Schema.org adicional -->
        <script type="application/ld+json">
            {
                "@context": "https://schema.org",
                "@type": "Service",
                "name": "Desarrollo Web Profesional en Colombia",
                "description": "Creamos sitios web personalizados en Cali y toda Colombia que impulsan el crecimiento de tu negocio. Expertos en React, Astro y optimización SEO.",
                "provider": {
                    "@type": "Organization",
                    "name": "Nexen",
                    "url": "https://www.nexen.com.co/"
                },
                "areaServed": ["Cali", "Valle del Cauca", "Colombia"],
                "serviceType": "Desarrollo Web",
                "offers": {
                    "@type": "Offer",
                    "price": "5000000",
                    "priceCurrency": "COP",
                    "availability": "https://schema.org/InStock"
                },
                "serviceOutput": [
                    "Sitios web de alto rendimiento",
                    "Aplicaciones web personalizadas",
                    "Tiendas online optimizadas",
                    "Landing pages de conversión"
                ],
                "hoursAvailable": "Mo,Tu,We,Th,Fr 08:00-18:00",
                "availableLanguage": ["Spanish", "English"]
            }
        </script>
    </article>
</Layout>
