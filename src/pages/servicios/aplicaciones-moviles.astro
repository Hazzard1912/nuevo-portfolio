---
import Layout from "../../layouts/Layout.astro";
import Image from "astro/components/Image.astro";

const serviceDetails = {
    title: "Aplicaciones Móviles",
    description:
        "Desarrollamos aplicaciones móviles nativas y multiplataforma que conectan con tus usuarios donde estén.",
    image: "https://images.unsplash.com/photo-1512941937669-90a1b58e7e9c?auto=format&fit=crop&q=80",
    sections: [
        {
            title: "Desarrollo Móvil Profesional",
            content:
                "Creamos aplicaciones móviles intuitivas y potentes que transforman tu visión en realidad. Utilizamos tecnologías modernas para garantizar el mejor rendimiento y experiencia de usuario.",
            features: [
                "Apps iOS nativas",
                "Apps Android nativas",
                "Aplicaciones híbridas",
                "PWAs",
            ],
        },
        {
            title: "Stack Tecnológico",
            content:
                "Utilizamos las mejores tecnologías del mercado para desarrollar aplicaciones móviles de alta calidad:",
            technologies: [
                {
                    name: "React Native",
                    description:
                        "Desarrollo multiplataforma eficiente con rendimiento nativo",
                },
                {
                    name: "Flutter",
                    description:
                        "Interfaces fluidas y consistentes en todas las plataformas",
                },
                {
                    name: "Swift",
                    description: "Desarrollo nativo iOS de alto rendimiento",
                },
                {
                    name: "Kotlin",
                    description: "Apps Android robustas y modernas",
                },
            ],
        },
    ],
    benefits: [
        {
            title: "Rendimiento Nativo",
            description:
                "Aplicaciones optimizadas que aprovechan al máximo el hardware del dispositivo",
        },
        {
            title: "Experiencia Fluida",
            description:
                "Interfaces intuitivas y animaciones suaves para mejor engagement",
        },
        {
            title: "Multiplataforma",
            description:
                "Alcanza a usuarios de iOS y Android con una única base de código",
        },
        {
            title: "Actualizaciones OTA",
            description:
                "Implementa mejoras y correcciones sin pasar por las tiendas de apps",
        },
    ],
    features: [
        {
            title: "Integración con APIs",
            description:
                "Conexión perfecta con servicios backend y APIs de terceros",
        },
        {
            title: "Modo Offline",
            description: "Funcionalidad básica sin conexión a internet",
        },
        {
            title: "Notificaciones Push",
            description:
                "Mantén a tus usuarios enganchados con notificaciones relevantes",
        },
        {
            title: "Analytics Integrado",
            description: "Métricas detalladas del comportamiento de usuarios",
        },
    ],
};

const title = "EstusCode | " + serviceDetails.title;
const metaTitle =
    "EstusCode | Desarrollo de Aplicaciones Móviles Profesionales";
const description = serviceDetails.description;
const url = "https://www.estuscode.com/servicios/aplicaciones-moviles";
const canonical = "https://www.estuscode.com/servicios/aplicaciones-moviles";
const keywords = [
    "Desarrollo Apps Móviles",
    "Aplicaciones iOS",
    "Aplicaciones Android",
    "React Native",
    "Flutter",
    "Swift",
    "Kotlin",
    "PWA",
    "Desarrollo Multiplataforma",
    "Apps Empresariales",
];
---

<Layout
    title={title}
    metaTitle={metaTitle}
    description={description}
    url={url}
    canonical={canonical}
    keywords={keywords}
>
    <article class="bg-white">
        <!-- Hero Section -->
        <div class="py-24">
            <Image
                src={serviceDetails.image}
                width={800}
                height={400}
                loading="eager"
                decoding="async"
                alt="Desarrollo de aplicaciones móviles profesionales"
                class="rounded-xl object-cover mx-auto"
            />
        </div>

        <!-- Content -->
        <main class="container mx-auto px-4">
            <div class="max-w-4xl mx-auto">
                {
                    serviceDetails.sections.map((section) => (
                        <section class="mb-16" data-aos="fade-up">
                            <h2 class="text-3xl font-bold text-gray-900 mb-6">
                                {section.title}
                            </h2>
                            <p class="text-xl text-gray-600 mb-8 leading-relaxed">
                                {section.content}
                            </p>

                            {section.features && (
                                <ul
                                    class="grid sm:grid-cols-2 gap-6"
                                    role="list"
                                >
                                    {section.features.map((feature) => (
                                        <li class="flex items-start space-x-4">
                                            <span
                                                class="flex-shrink-0 text-blue-600"
                                                aria-hidden="true"
                                            >
                                                <svg
                                                    class="w-6 h-6"
                                                    fill="none"
                                                    viewBox="0 0 24 24"
                                                    stroke="currentColor"
                                                >
                                                    <path
                                                        stroke-linecap="round"
                                                        stroke-linejoin="round"
                                                        stroke-width="2"
                                                        d="M5 13l4 4L19 7"
                                                    />
                                                </svg>
                                            </span>
                                            <span class="text-lg text-gray-700">
                                                {feature}
                                            </span>
                                        </li>
                                    ))}
                                </ul>
                            )}

                            {section.technologies && (
                                <div class="grid sm:grid-cols-2 gap-6">
                                    {section.technologies.map((tech) => (
                                        <div class="p-6 rounded-xl bg-gray-50 hover:bg-gray-100 transition-all duration-300">
                                            <h3 class="font-semibold text-lg text-gray-900 mb-2">
                                                {tech.name}
                                            </h3>
                                            <p class="text-gray-600">
                                                {tech.description}
                                            </p>
                                        </div>
                                    ))}
                                </div>
                            )}
                        </section>
                    ))
                }

                <!-- Características Destacadas -->
                <section class="mb-16" data-aos="fade-up">
                    <h2 class="text-3xl font-bold text-gray-900 mb-8">
                        Características Destacadas
                    </h2>
                    <div class="grid sm:grid-cols-2 gap-6">
                        {
                            serviceDetails.features.map((feature) => (
                                <div
                                    class="p-6 rounded-xl bg-white border border-gray-100 
                                hover:shadow-xl hover:shadow-blue-500/10 transition-all duration-300"
                                >
                                    <h3 class="font-semibold text-xl text-gray-900 mb-3">
                                        {feature.title}
                                    </h3>
                                    <p class="text-gray-600">
                                        {feature.description}
                                    </p>
                                </div>
                            ))
                        }
                    </div>
                </section>

                <!-- Beneficios -->
                <section class="mb-16" data-aos="fade-up">
                    <h2 class="text-3xl font-bold text-gray-900 mb-8">
                        Beneficios de Nuestras Aplicaciones Móviles
                    </h2>
                    <div class="grid sm:grid-cols-2 gap-6">
                        {
                            serviceDetails.benefits.map((benefit) => (
                                <div
                                    class="p-6 rounded-xl bg-white border border-gray-100 
                                hover:shadow-xl hover:shadow-blue-500/10 transition-all duration-300"
                                >
                                    <h3 class="font-semibold text-xl text-gray-900 mb-3">
                                        {benefit.title}
                                    </h3>
                                    <p class="text-gray-600">
                                        {benefit.description}
                                    </p>
                                </div>
                            ))
                        }
                    </div>
                </section>
            </div>
        </main>
    </article>
</Layout>
