---
import Layout from "../../layouts/Layout.astro";
import { Image } from "astro:assets";
import Button from "../../ui/Button.astro";

import mobileAppImage from "../../assets/images/services/mobile-apps.avif";

const serviceDetails = {
    title: "Desarrollo de Aplicaciones Móviles en Colombia",
    description:
        "Creamos aplicaciones móviles para iOS y Android que conectan con tus clientes en Colombia. Expertos en React Native, Flutter y soluciones nativas.",
    image: mobileAppImage,
    sections: [
        {
            title: "Desarrollo Móvil para Empresas Colombianas",
            content:
                "Creamos aplicaciones móviles que conectan tu marca con usuarios en Cali, Bogotá y toda Colombia. Nuestro equipo desarrolla soluciones adaptadas al mercado local, considerando la infraestructura móvil colombiana y los hábitos de uso específicos.",
            features: [
                "Apps nativas para iOS optimizadas para el mercado colombiano",
                "Aplicaciones Android adaptadas a los dispositivos más usados en Colombia",
                "Soluciones híbridas costo-efectivas para startups y PyMEs",
                "PWAs para mejor accesibilidad con conexiones limitadas",
            ],
        },
        {
            title: "Tecnologías Móviles de Vanguardia",
            content:
                "Utilizamos las mejores tecnologías del mercado para desarrollar aplicaciones móviles confiables y de alto rendimiento para el usuario colombiano:",
            technologies: [
                {
                    name: "React Native",
                    description:
                        "Desarrollo multiplataforma eficiente que reduce costos sin sacrificar calidad",
                },
                {
                    name: "Flutter",
                    description:
                        "Interfaces fluidas con alta aceptación en el mercado colombiano",
                },
                {
                    name: "Swift",
                    description:
                        "Desarrollo iOS nativo para usuarios premium en Colombia",
                },
                {
                    name: "Kotlin",
                    description:
                        "Apps Android robustas para el mercado mayoritario colombiano",
                },
            ],
        },
    ],
    benefits: [
        {
            title: "Rendimiento Optimizado",
            description:
                "Aplicaciones rápidas incluso en dispositivos de gama media populares en Colombia",
        },
        {
            title: "Experiencia de Usuario Local",
            description:
                "Diseño adaptado a preferencias y necesidades del usuario colombiano",
        },
        {
            title: "Cobertura Nacional",
            description:
                "Soluciones que funcionan en todo el territorio colombiano, incluso con conexión limitada",
        },
        {
            title: "Actualizaciones Remotas",
            description:
                "Mejoras y correcciones sin depender de tiendas de aplicaciones",
        },
    ],
    features: [
        {
            title: "Integración con APIs Locales",
            description:
                "Conexión con servicios de pago colombianos (PSE, Nequi, Daviplata) y APIs gubernamentales",
        },
        {
            title: "Funcionalidad Offline",
            description:
                "Operación básica sin conexión, ideal para zonas con cobertura limitada en Colombia",
        },
        {
            title: "Notificaciones Contextuales",
            description:
                "Sistema de notificaciones adaptado al comportamiento del usuario colombiano",
        },
        {
            title: "Analytics Localizado",
            description:
                "Métricas detalladas específicas para el mercado colombiano",
        },
    ],
    casosExito: [
        {
            industria: "Retail",
            resultado:
                "Incremento del 75% en ventas móviles con app de e-commerce optimizada para Colombia",
        },
        {
            industria: "Servicios",
            resultado:
                "Plataforma de servicios a domicilio con 50.000+ descargas en Cali y Valle del Cauca",
        },
        {
            industria: "Fintech",
            resultado:
                "App de pagos móviles con más de 25.000 transacciones mensuales en Colombia",
        },
    ],
};

// Metadatos optimizados
const title = "Desarrollo de Aplicaciones Móviles en Colombia | Nexen";
const metaTitle = "Aplicaciones Móviles para Empresas Colombianas | Nexen";
const description =
    "Desarrollamos apps iOS y Android personalizadas para el mercado colombiano. Expertos en React Native y Flutter con casos de éxito en Cali y toda Colombia.";
const url = "https://www.nexen.com.co/servicios/aplicaciones-moviles/";
const canonical = "https://www.nexen.com.co/servicios/aplicaciones-moviles/";
// Keywords optimizadas
const keywords = [
    "aplicaciones móviles Colombia",
    "desarrollo apps Cali",
    "React Native Colombia",
    "Flutter desarrollo Colombia",
    "apps empresariales Valle del Cauca",
    "desarrollo iOS Android Colombia",
];
---

<Layout
    title={title}
    metaTitle={metaTitle}
    description={description}
    url={url}
    canonical={canonical}
    keywords={keywords}
>
    <article
        class="bg-[#E0E1DD]"
        itemscope
        itemtype="https://schema.org/Service"
    >
        <meta
            itemprop="serviceType"
            content="Desarrollo de Aplicaciones Móviles"
        />
        <meta itemprop="provider" content="Nexen" />
        <meta itemprop="areaServed" content="Colombia" />

        <!-- Hero Section Mejorada -->
        <section
            class="relative py-12 md:py-24 bg-gradient-to-r from-[#0D1B2A] to-[#1B263B]"
        >
            <div class="container mx-auto px-4">
                <div class="max-w-6xl mx-auto">
                    <div
                        class="grid md:grid-cols-2 gap-8 md:gap-12 items-center"
                    >
                        <div>
                            <h1
                                class="text-3xl md:text-5xl font-bold text-[#E0E1DD] mb-4 md:mb-6"
                                itemprop="name"
                            >
                                Aplicaciones Móviles para <span
                                    class="text-[#778DA9]">Colombia</span
                                >
                            </h1>
                            <p
                                class="text-lg md:text-xl text-[#E0E1DD]/90 mb-6 md:mb-8 leading-relaxed"
                                itemprop="description"
                            >
                                Desarrollamos apps nativas y multiplataforma
                                adaptadas al mercado colombiano. Desde <strong
                                    class="text-[#E0E1DD]">Cali</strong
                                > para todo el país, creamos experiencias móviles
                                que conectan con tus usuarios.
                            </p>
                            <Button
                                text="Cotizar Mi Aplicación"
                                href="/#contacto"
                                className="bg-[#415A77] hover:bg-[#778DA9] text-[#E0E1DD] border-0 w-full md:w-auto"
                                hasIcon
                                ariaLabel="Cotizar desarrollo de aplicación móvil"
                            />
                        </div>
                        <div class="mt-8 md:mt-0">
                            <Image
                                format="webp"
                                src={serviceDetails.image}
                                width={600}
                                height={400}
                                loading="eager"
                                decoding="async"
                                fetchpriority="high"
                                sizes="(max-width: 768px) 100vw, 50vw"
                                alt="Desarrollo de aplicaciones móviles en Colombia"
                                class="rounded-xl object-cover shadow-xl w-full h-auto"
                                itemprop="image"
                            />
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Content -->
        <main class="container mx-auto px-4 py-8 md:py-16">
            <div class="max-w-4xl mx-auto">
                {
                    serviceDetails.sections.map((section) => (
                        <section class="mb-12 md:mb-16">
                            <h2 class="text-2xl md:text-3xl font-bold text-[#0D1B2A] mb-4 md:mb-6">
                                {section.title}
                            </h2>
                            <p class="text-lg md:text-xl text-[#1B263B] mb-6 md:mb-8 leading-relaxed">
                                {section.content}
                            </p>

                            {section.features && (
                                <ul
                                    class="grid sm:grid-cols-2 gap-6 mb-8"
                                    role="list"
                                >
                                    {section.features.map((feature) => (
                                        <li class="flex items-start space-x-4">
                                            <span
                                                class="flex-shrink-0 text-[#415A77]"
                                                aria-hidden="true"
                                            >
                                                <svg
                                                    class="w-6 h-6"
                                                    fill="none"
                                                    viewBox="0 0 24 24"
                                                    stroke="currentColor"
                                                >
                                                    <path
                                                        stroke-linecap="round"
                                                        stroke-linejoin="round"
                                                        stroke-width="2"
                                                        d="M5 13l4 4L19 7"
                                                    />
                                                </svg>
                                            </span>
                                            <span class="text-lg text-[#1B263B]">
                                                {feature}
                                            </span>
                                        </li>
                                    ))}
                                </ul>
                            )}

                            {section.technologies && (
                                <div class="grid sm:grid-cols-2 gap-6">
                                    {section.technologies.map((tech) => (
                                        <div class="p-6 rounded-xl bg-white border border-[#778DA9]/20 hover:shadow-lg hover:shadow-[#415A77]/5 transition-all duration-300">
                                            <h3 class="font-semibold text-lg text-[#0D1B2A] mb-2">
                                                {tech.name}
                                            </h3>
                                            <p class="text-[#1B263B]">
                                                {tech.description}
                                            </p>
                                        </div>
                                    ))}
                                </div>
                            )}
                        </section>
                    ))
                }

                <!-- Características Destacadas -->
                <section class="mb-16" data-aos="fade-up">
                    <h2 class="text-3xl font-bold text-[#0D1B2A] mb-8">
                        Características Adaptadas al Mercado Colombiano
                    </h2>
                    <div class="grid sm:grid-cols-2 gap-6">
                        {
                            serviceDetails.features.map((feature) => (
                                <div
                                    class="p-6 rounded-xl bg-white border border-[#778DA9]/20 
                                    hover:shadow-xl hover:shadow-[#415A77]/10 transition-all duration-300"
                                    itemprop="serviceOutput"
                                >
                                    <h3 class="font-semibold text-xl text-[#0D1B2A] mb-3">
                                        {feature.title}
                                    </h3>
                                    <p class="text-[#1B263B]">
                                        {feature.description}
                                    </p>
                                </div>
                            ))
                        }
                    </div>
                </section>

                <!-- Beneficios -->
                <section class="mb-16" data-aos="fade-up">
                    <h2 class="text-3xl font-bold text-[#0D1B2A] mb-8">
                        Beneficios de Nuestras Aplicaciones Móviles
                    </h2>
                    <div class="grid sm:grid-cols-2 gap-6">
                        {
                            serviceDetails.benefits.map((benefit) => (
                                <div
                                    class="p-6 rounded-xl bg-white border border-[#778DA9]/20 
                                    hover:shadow-xl hover:shadow-[#415A77]/10 transition-all duration-300"
                                >
                                    <h3 class="font-semibold text-xl text-[#0D1B2A] mb-3">
                                        {benefit.title}
                                    </h3>
                                    <p class="text-[#1B263B]">
                                        {benefit.description}
                                    </p>
                                </div>
                            ))
                        }
                    </div>
                </section>

                <!-- Nueva sección: Casos de éxito en Colombia -->
                <section
                    class="mb-16 p-8 bg-[#778DA9]/10 rounded-2xl border border-[#778DA9]/20"
                    data-aos="fade-up"
                >
                    <h2 class="text-3xl font-bold text-[#0D1B2A] mb-8">
                        Casos de Éxito en Colombia
                    </h2>
                    <div class="space-y-6">
                        {
                            serviceDetails.casosExito.map((caso) => (
                                <div class="bg-white p-6 rounded-xl shadow-sm border border-[#778DA9]/10">
                                    <div class="flex items-start">
                                        <div class="flex-shrink-0 mr-4">
                                            <svg
                                                class="w-8 h-8 text-[#415A77]"
                                                fill="none"
                                                viewBox="0 0 24 24"
                                                stroke="currentColor"
                                            >
                                                <path
                                                    stroke-linecap="round"
                                                    stroke-linejoin="round"
                                                    stroke-width="2"
                                                    d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                                                />
                                            </svg>
                                        </div>
                                        <div>
                                            <h3 class="font-bold text-lg text-[#0D1B2A] mb-2">
                                                Industria: {caso.industria}
                                            </h3>
                                            <p class="text-[#1B263B]">
                                                {caso.resultado}
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            ))
                        }
                    </div>
                </section>

                <!-- CTA -->
                <section
                    class="text-center p-8 mb-16 bg-gradient-to-r from-[#0D1B2A] to-[#1B263B] rounded-2xl text-[#E0E1DD]"
                    data-aos="fade-up"
                >
                    <h2 class="text-3xl font-bold mb-4">
                        ¿Listo para conectar con tus usuarios en Colombia?
                    </h2>
                    <p class="text-xl mb-8 max-w-3xl mx-auto opacity-90">
                        Contáctanos hoy para una consultoría gratuita sobre cómo
                        una aplicación móvil puede transformar tu negocio en el
                        mercado colombiano.
                    </p>
                    <Button
                        text="Solicitar Información"
                        href="/#contacto"
                        className="bg-[#E0E1DD] text-[#0D1B2A] hover:bg-[#778DA9]/90 hover:text-[#0D1B2A] shadow-xl border-0"
                        ariaLabel="Solicitar información sobre apps móviles"
                    />
                </section>
            </div>
        </main>

        <!-- Schema.org adicional -->
        <script type="application/ld+json">
            {
                "@context": "https://schema.org",
                "@type": "Service",
                "name": "Desarrollo de Aplicaciones Móviles en Colombia",
                "description": "Creamos aplicaciones móviles para iOS y Android que conectan con tus clientes en Colombia. Expertos en React Native, Flutter y soluciones nativas.",
                "provider": {
                    "@type": "Organization",
                    "name": "Nexen",
                    "url": "https://www.nexen.com.co/"
                },
                "areaServed": ["Cali", "Valle del Cauca", "Bogotá", "Colombia"],
                "serviceType": "Desarrollo de Aplicaciones Móviles",
                "offers": {
                    "@type": "Offer",
                    "price": "15000000",
                    "priceCurrency": "COP",
                    "availability": "https://schema.org/InStock"
                },
                "serviceOutput": [
                    "Aplicaciones iOS Nativas",
                    "Aplicaciones Android Nativas",
                    "Aplicaciones Multiplataforma",
                    "Progressive Web Apps"
                ],
                "hoursAvailable": "Mo,Tu,We,Th,Fr 08:00-18:00",
                "availableLanguage": ["Spanish", "English"]
            }
        </script>
    </article>
</Layout>
