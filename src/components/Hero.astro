---
import Button from "../ui/Button.astro";
---

<section
    class="min-h-screen w-full flex items-center justify-center relative overflow-hidden"
    id="inicio"
>
    <!-- Imagen de fondo -->
    <div class="absolute inset-0 z-0">
        <img
            src="https://images.unsplash.com/photo-1555066931-4365d14bab8c?auto=format&fit=crop&q=80&w=1920"
            loading="eager"
            fetchpriority="high"
            decoding="async"
            alt="Desarrollo web profesional - fondo abstracto de código"
            class="w-full h-full object-cover"
        />
        <!-- Overlay para mejorar legibilidad -->
        <div
            class="absolute inset-0 bg-gradient-to-r from-blue-950/90 to-purple-950/80 mix-blend-multiply"
        >
        </div>
    </div>

    <div class="container mx-auto px-4 py-16 relative">
        <div class="max-w-4xl mx-auto text-center space-y-12 relative z-10">
            <!-- H1 optimizado con keywords principales -->
            <h1
                class="text-4xl md:text-6xl lg:text-7xl font-bold text-white"
                data-aos="fade-up"
                data-aos-duration="1000"
            >
                Desarrollo Web Profesional en
                <span
                    class="py-3 bg-gradient-to-r from-blue-400 to-purple-400 text-transparent bg-clip-text animate-gradient"
                >
                    Colombia
                </span>
            </h1>

            <!-- Descripción optimizada con keywords secundarias y ubicación -->
            <p
                class="text-xl md:text-2xl text-gray-200 max-w-3xl mx-auto leading-relaxed"
                data-aos="fade-up"
                data-aos-duration="1000"
                data-aos-delay="200"
            >
                Servicios de <strong class="text-white"
                    >diseño y desarrollo web</strong
                > en <strong class="text-white">Cali</strong> y todo el Valle del
                Cauca. Creamos sitios web de alto rendimiento con Astro y tecnologías
                modernas.
                <span class="block mt-2 font-semibold text-purple-200">
                    Optimizados para SEO. Rápidos. Efectivos.
                </span>
            </p>

            <!-- Elementos decorativos -->
            <div
                class="absolute -left-20 top-1/3 w-40 h-40 bg-blue-500/20 rounded-full blur-3xl"
            >
            </div>
            <div
                class="absolute -right-20 bottom-1/3 w-60 h-60 bg-purple-500/20 rounded-full blur-3xl"
            >
            </div>

            <!-- CTAs con microdatos schema.org -->
            <div
                class="flex flex-col sm:flex-row justify-center gap-6"
                data-aos="fade-up"
                data-aos-duration="1000"
                data-aos-delay="400"
                itemscope
                itemtype="https://schema.org/Service"
            >
                <meta itemprop="serviceType" content="Desarrollo Web" />
                <meta itemprop="areaServed" content="Colombia" />
                <meta itemprop="provider" content="EstusCode" />

                <Button
                    text="Iniciar Proyecto Web"
                    href="#contacto"
                    hasIcon
                    ariaLabel="Iniciar un nuevo proyecto de desarrollo web"
                    className="hover:scale-105 transition-transform"
                />
                <Button
                    text="Explorar Servicios"
                    href="/servicios"
                    isPrimary={false}
                    ariaLabel="Ver nuestros servicios de desarrollo web"
                    className="bg-white/10 hover:bg-white/20 text-white border-white/30 hover:scale-105 transition-transform"
                />
            </div>
        </div>
    </div>

    <!-- Microdatos Schema.org para el negocio -->
    <script type="application/ld+json">
        {
            "@context": "https://schema.org",
            "@type": "ProfessionalService",
            "name": "EstusCode",
            "description": "Servicios profesionales de desarrollo web en Colombia, especializados en sitios web rápidos y optimizados con Astro.",
            "url": "https://www.estuscode.com",
            "areaServed": ["Cali", "Valle del Cauca", "Colombia"],
            "serviceType": ["Desarrollo Web", "Diseño Web", "Aplicaciones Web"],
            "knowsLanguage": ["es", "en"],
            "address": {
                "@type": "PostalAddress",
                "addressLocality": "Cali",
                "addressRegion": "Valle del Cauca",
                "addressCountry": "CO"
            }
        }
    </script>
</section>
