---
import Button from "../ui/Button.astro";
---

<section
    class="min-h-screen w-full flex items-center justify-center bg-white"
    id="inicio"
>
    <div class="container mx-auto px-4 py-16 relative">
        <div class="max-w-4xl mx-auto text-center space-y-12 relative z-10">
            <!-- H1 optimizado con keywords principales -->
            <h1
                class="text-4xl md:text-6xl lg:text-7xl font-bold text-gray-900"
                data-aos="fade-up"
                data-aos-duration="1000"
            >
                Desarrollo Web Profesional en
                <span
                    class="py-3 bg-gradient-to-r from-blue-600 to-purple-600 text-transparent bg-clip-text animate-gradient"
                >
                    Colombia
                </span>
            </h1>

            <!-- Descripción optimizada con keywords secundarias y ubicación -->
            <p
                class="text-xl md:text-2xl text-gray-600 max-w-3xl mx-auto leading-relaxed"
                data-aos="fade-up"
                data-aos-duration="1000"
                data-aos-delay="200"
            >
                Servicios de <strong>diseño y desarrollo web</strong> en <strong
                    >Cali</strong
                > y todo el Valle del Cauca. Creamos sitios web de alto rendimiento
                con Astro y tecnologías modernas.
                <span class="block mt-2 font-semibold">
                    Optimizados para SEO. Rápidos. Efectivos.
                </span>
            </p>

            <!-- CTAs con microdatos schema.org -->
            <div
                class="flex flex-col sm:flex-row justify-center gap-6"
                data-aos="fade-up"
                data-aos-duration="1000"
                data-aos-delay="400"
                itemscope
                itemtype="https://schema.org/Service"
            >
                <meta itemprop="serviceType" content="Desarrollo Web" />
                <meta itemprop="areaServed" content="Colombia" />
                <meta itemprop="provider" content="EstusCode" />

                <Button
                    text="Iniciar Proyecto Web"
                    href="#contacto"
                    hasIcon
                    ariaLabel="Iniciar un nuevo proyecto de desarrollo web"
                    className="hover:scale-105 transition-transform"
                />
                <Button
                    text="Explorar Servicios"
                    href="/servicios"
                    isPrimary={false}
                    ariaLabel="Ver nuestros servicios de desarrollo web"
                    className="hover:scale-105 transition-transform"
                />
            </div>
        </div>
    </div>

    <!-- Microdatos Schema.org para el negocio -->
    <script type="application/ld+json">
        {
            "@context": "https://schema.org",
            "@type": "ProfessionalService",
            "name": "EstusCode",
            "description": "Servicios profesionales de desarrollo web en Colombia, especializados en sitios web rápidos y optimizados con Astro.",
            "url": "https://www.estuscode.com",
            "areaServed": ["Cali", "Valle del Cauca", "Colombia"],
            "serviceType": ["Desarrollo Web", "Diseño Web", "Aplicaciones Web"],
            "knowsLanguage": ["es", "en"],
            "address": {
                "@type": "PostalAddress",
                "addressLocality": "Cali",
                "addressRegion": "Valle del Cauca",
                "addressCountry": "CO"
            }
        }
    </script>
</section>
