---
import Button from "../ui/Button.astro";
import { Image } from "astro:assets";
import fondoHero from "../assets/images/hero.avif";
---

<section
    class="min-h-screen w-full flex items-center justify-center relative overflow-hidden"
    id="inicio"
>
    <!-- Imagen de fondo -->
    <div class="absolute inset-0 z-0">
        <Image
            src={fondoHero}
            alt="Desarrollo web profesional - fondo abstracto de código"
            class="w-full h-full object-cover"
            width={1920}
            height={1080}
            loading="eager"
            decoding="async"
            fetchpriority="high"
        />
        <!-- Overlay para mejorar legibilidad -->
        <div
            class="absolute inset-0 bg-gradient-to-r from-[#0D1B2A]/95 to-[#1B263B]/90 mix-blend-multiply"
        >
        </div>
    </div>

    <div class="container mx-auto px-4 py-16 relative">
        <div class="max-w-4xl mx-auto text-center space-y-10 relative z-10">
            <!-- H1 optimizado con keywords principales -->
            <h1
                class="text-4xl md:text-6xl lg:text-7xl font-bold text-[#E0E1DD]"
                data-aos="fade-up"
                data-aos-duration="1000"
            >
                Desarrollo Web Profesional en
                <span
                    class="py-3 bg-gradient-to-r from-[#778DA9] to-[#E0E1DD] text-transparent bg-clip-text animate-gradient"
                >
                    Colombia
                </span>
            </h1>

            <!-- Descripción optimizada con keywords secundarias y ubicación -->
            <p
                class="text-xl md:text-2xl text-[#E0E1DD]/90 max-w-3xl mx-auto leading-relaxed"
                data-aos="fade-up"
                data-aos-duration="1000"
                data-aos-delay="200"
            >
                Servicios de <strong class="text-[#E0E1DD]"
                    >diseño y desarrollo web</strong
                > en <strong class="text-[#E0E1DD]">Cali</strong> y todo el Valle
                del Cauca. Creamos sitios web de alto rendimiento con tecnologías
                modernas.
                <span class="block mt-2 font-semibold text-[#778DA9]">
                    Optimizados para SEO. Rápidos. Efectivos.
                </span>
            </p>

            <!-- Elementos decorativos -->
            <div
                class="absolute -left-20 top-1/3 w-40 h-40 bg-[#415A77]/30 rounded-full blur-3xl"
            >
            </div>
            <div
                class="absolute -right-20 bottom-1/3 w-60 h-60 bg-[#778DA9]/20 rounded-full blur-3xl"
            >
            </div>

            <!-- CTAs con microdatos schema.org -->
            <div
                class="flex flex-col sm:flex-row justify-center gap-5 md:gap-6"
                data-aos="fade-up"
                data-aos-duration="1000"
                data-aos-delay="400"
                itemscope
                itemtype="https://schema.org/Service"
            >
                <meta itemprop="serviceType" content="Desarrollo Web" />
                <meta itemprop="areaServed" content="Colombia" />
                <meta itemprop="provider" content="Nexen" />

                <Button
                    text="Iniciar Proyecto Web"
                    href="#contacto"
                    hasIcon
                    ariaLabel="Iniciar un nuevo proyecto de desarrollo web"
                    className="bg-[#415A77] hover:bg-[#778DA9] text-[#E0E1DD] border-0 hover:scale-105 transition-transform shadow-lg shadow-[#415A77]/20"
                />
                <a
                    href="servicios/"
                    class="inline-flex items-center justify-center gap-2 px-6 py-2.5 rounded-full font-medium text-sm transition-all duration-200 hover:scale-[1.05] active:scale-[0.95] focus:outline-none focus:ring-2 focus:ring-offset-2 will-change-transform bg-[#778DA9]/40 hover:bg-[#778DA9]/60 text-[#E0E1DD] border-2 border-[#E0E1DD]/40 hover:border-[#E0E1DD]/60 shadow-lg shadow-[#778DA9]/20"
                    aria-label="Ver nuestros servicios de desarrollo web"
                >
                    Explorar Servicios
                </a>
            </div>
        </div>
    </div>

    <!-- Microdatos Schema.org para el negocio -->
    <script type="application/ld+json">
        {
            "@context": "https://schema.org",
            "@type": "ProfessionalService",
            "name": "Nexen",
            "description": "Servicios profesionales de desarrollo web en Colombia, especializados en sitios web rápidos y optimizados con Astro.",
            "url": "https://www.nexen.com.co",
            "areaServed": ["Cali", "Valle del Cauca", "Colombia"],
            "serviceType": ["Desarrollo Web", "Diseño Web", "Aplicaciones Web"],
            "knowsLanguage": ["es", "en"],
            "address": {
                "@type": "PostalAddress",
                "addressLocality": "Cali",
                "addressRegion": "Valle del Cauca",
                "addressCountry": "CO"
            }
        }
    </script>
</section>
