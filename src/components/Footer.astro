---
import { Image } from "astro:assets";
import logo from "../assets/logo.svg";

const navigationLinks = [
    { href: "#", label: "Inicio" },
    { href: "#servicios", label: "Servicios" },
    { href: "#portfolio", label: "Portfolio" },
    { href: "#contacto", label: "Contacto" }
];

const contactInfo = [
    {
        icon: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>',
        text: "Cali, Colombia",
        type: "text"
    },
    {
        icon: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>',
        text: "estuscode@proton.me",
        type: "email"
    }
];
---

<footer class="bg-slate-950 py-12 relative border-t border-slate-800/50">
    <div class="container mx-auto px-4">
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-5xl mx-auto">
            <!-- Brand -->
            <div class="space-y-4">
                <a 
                    href="#"
                    class="group flex items-center space-x-2 text-2xl font-bold">
                    <Image
                        src={logo}
                        alt="EstusCode Logo"
                        class="w-12 h-12"
                    />
                    <span class="bg-gradient-to-r from-blue-400 via-purple-400 to-blue-400 bg-clip-text text-transparent">
                        EstusCode
                    </span>
                </a>
                <p class="text-slate-400 text-base leading-relaxed">
                    Creamos experiencias digitales excepcionales que transforman negocios y conectan con las audiencias.
                </p>
            </div>

            <!-- Navigation -->
            <div class="space-y-4">
                <h4 class="text-white font-medium text-xl">Enlaces RÃ¡pidos</h4>
                <ul class="space-y-2">
                    {navigationLinks.map(({ href, label }) => (
                        <li>
                            <a
                                href={href}
                                class="text-slate-400 hover:text-blue-400 transition-colors flex items-center gap-2 text-base"
                                aria-label={`Ir a ${label}`}
                            >
                                <span class="h-1 w-1 rounded-full bg-blue-400/50"></span>
                                {label}
                            </a>
                        </li>
                    ))}
                </ul>
            </div>

            <!-- Contact -->
            <div class="space-y-4">
                <h4 class="text-white font-medium text-xl">Contacto</h4>
                <ul class="space-y-3">
                    {contactInfo.map(({ icon, text, type }) => (
                        <li class="flex items-center gap-3">
                            <div class="h-8 w-8 rounded-lg bg-blue-500/10 flex items-center justify-center">
                                <svg
                                    class="w-4 h-4 text-blue-400"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                    set:html={icon}
                                />
                            </div>
                            {type === 'email' ? (
                                <a 
                                    href={`mailto:${text}`}
                                    class="text-slate-400 hover:text-blue-400 transition-colors text-base"
                                >
                                    {text}
                                </a>
                            ) : (
                                <span class="text-slate-400 text-base">{text}</span>
                            )}
                        </li>
                    ))}
                </ul>
            </div>
        </div>

        <div class="border-t border-slate-800/50 mt-12 pt-6 text-center">
            <p class="text-slate-400 text-base">
                &copy; {new Date().getFullYear()} EstusCode. Todos los derechos reservados.
            </p>
        </div>
    </div>
</footer>
