---

<footer class="bg-white border-t border-gray-100">
    <div class="container mx-auto px-4 py-16">
        <!-- Main Footer Content -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12">
            <!-- Brand Section -->
            <div class="space-y-6">
                <a 
                    href="/#inicio"
                    class="group inline-flex items-center space-x-2 text-2xl font-bold"
                    aria-label="EstusCode - Inicio">
                    <Image
                        src="/logo.svg"
                        alt="EstusCode Logo"
                        class="w-12 h-12"
                        width="48"
                        height="48"
                    />
                    <span class="bg-gradient-to-r from-blue-600 via-purple-600 to-blue-600 bg-clip-text text-transparent">
                        EstusCode
                    </span>
                </a>
                <p class="text-gray-600 text-base leading-relaxed">
                    Transformamos ideas en experiencias digitales excepcionales. Expertos en desarrollo web y soluciones tecnológicas en Colombia.
                </p>
            </div>

            <!-- Navigation Sections -->
            {navigationSections.map(section => (
                <div class="space-y-6">
                    <h4 class="text-lg font-semibold text-gray-900">{section.title}</h4>
                    <ul class="space-y-4">
                        {section.links.map(({ href, label, ariaLabel }) => (
                            <li>
                                <a
                                    href={href}
                                    class="text-gray-600 hover:text-blue-600 transition-colors duration-300 flex items-center gap-2"
                                    aria-label={ariaLabel}
                                >
                                    <span class="h-1 w-1 rounded-full bg-blue-600/50"></span>
                                    {label}
                                </a>
                            </li>
                        ))}
                    </ul>
                </div>
            ))}

            <!-- Contact Information -->
            <div class="space-y-6">
                <h4 class="text-lg font-semibold text-gray-900">Contacto</h4>
                <ul class="space-y-4">
                    {contactInfo.map(({ title, text, icon, href }) => (
                        <li>
                            <a
                                href={href}
                                class="group flex items-center gap-3 text-gray-600 hover:text-blue-600 
                                    transition-colors duration-300"
                                target="_blank"
                                rel="noopener noreferrer"
                            >
                                <div class="w-10 h-10 rounded-lg bg-gray-50 flex items-center justify-center
                                    group-hover:bg-blue-50 transition-colors duration-300">
                                    <svg
                                        class="w-5 h-5 text-gray-600 group-hover:text-blue-600 
                                            transition-colors duration-300"
                                        fill="none"
                                        stroke="currentColor"
                                        viewBox="0 0 24 24"
                                        set:html={icon}
                                    />
                                </div>
                                <div>
                                    <span class="block text-sm font-medium text-gray-900">{title}</span>
                                    <span class="text-sm">{text}</span>
                                </div>
                            </a>
                        </li>
                    ))}
                </ul>
            </div>
        </div>

        <!-- Bottom Bar -->
        <div class="mt-12 pt-8 border-t border-gray-100">
            <div class="flex flex-col md:flex-row items-center justify-center">
                <p class="text-gray-600 text-sm">
                    © {new Date().getFullYear()} EstusCode. Todos los derechos reservados.
                </p>
            </div>
        </div>
    </div>
</footer>
