---
import { Image } from "astro:assets";

const navigationSections = [
    {
        title: "Servicios",
        links: [
            {
                href: "/servicios/desarrollo-web",
                label: "Desarrollo Web",
                ariaLabel: "Ver servicios de desarrollo web",
            },
            {
                href: "/servicios/aplicaciones-moviles",
                label: "Aplicaciones Móviles",
                ariaLabel: "Ver servicios de aplicaciones móviles",
            },
            {
                href: "/servicios/software-empresarial",
                label: "Software Empresarial",
                ariaLabel: "Ver servicios de software empresarial",
            },
        ],
    },
    {
        title: "Empresa",
        links: [
            {
                href: "/#proceso",
                label: "Proceso",
                ariaLabel: "Conoce nuestro proceso",
            },
            {
                href: "/#portfolio",
                label: "Portfolio",
                ariaLabel: "Ver nuestro portfolio",
            },
            {
                href: "/#testimonios",
                label: "Testimonios",
                ariaLabel: "Ver testimonios de clientes",
            },
            {
                href: "/#faq",
                label: "FAQ",
                ariaLabel: "Ver preguntas frecuentes",
            },
        ],
    },
];

const contactInfo = [
    {
        title: "Ubicación",
        text: "Cali, Colombia",
        icon: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>',
        href: "https://goo.gl/maps/your-location",
    },
    {
        title: "Email",
        text: "comunicaciones@estuscode.com",
        icon: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>',
        href: "mailto:comunicaciones@estuscode.com",
    },
    {
        title: "WhatsApp",
        text: "+57 305 281 8108",
        icon: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"/>',
        href: "https://wa.me/573052818108?text=Hola%20Nexen,%20me%20interesa%20conocer%20más%20sobre%20sus%20servicios.",
    },
];

const socialLinks = [
    {
        href: "https://www.instagram.com/estuscode.dev/",
        label: "Instagram",
        icon: '<path d="M7.75 2.5h8.5a5.25 5.25 0 015.25 5.25v8.5a5.25 5.25 0 01-5.25 5.25h-8.5a5.25 5.25 0 01-5.25-5.25v-8.5A5.25 5.25 0 017.75 2.5zM12 15a3 3 0 100-6 3 3 0 000 6zm4-9H8v1h8V6zm1-1H7v1h10V5z"/>',
    },
    {
        href: "https://linkedin.com/company/estuscode",
        label: "LinkedIn",
        icon: '<path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>',
    },
];
---

<footer class="bg-[#1B263B] text-[#E0E1DD] border-t border-[#0D1B2A]">
    <div class="container mx-auto px-4 py-16">
        <!-- Main Footer Content -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12">
            <!-- Brand Section -->
            <div class="space-y-6">
                <a
                    href="/#inicio"
                    class="group inline-flex items-center space-x-2 text-2xl font-bold"
                    aria-label="Nexen - Inicio"
                >
                    <Image
                        src="/logo.svg"
                        alt="Nexen Logo"
                        class="w-24 h-20"
                        width="48"
                        height="48"
                    />
                    <span
                        class="bg-gradient-to-r from-[#778DA9] to-[#E0E1DD] bg-clip-text text-transparent uppercase"
                    >
                        Nexen
                    </span>
                </a>
                <p class="text-[#E0E1DD]/80 text-base leading-relaxed">
                    Transformamos ideas en experiencias digitales excepcionales.
                    Expertos en desarrollo web y soluciones tecnológicas en
                    Colombia.
                </p>
            </div>

            <!-- Navigation Sections -->
            {
                navigationSections.map((section) => (
                    <div class="space-y-6">
                        <h4 class="text-lg font-semibold text-[#E0E1DD]">
                            {section.title}
                        </h4>
                        <ul class="space-y-4">
                            {section.links.map(({ href, label, ariaLabel }) => (
                                <li>
                                    <a
                                        href={href}
                                        class="text-[#E0E1DD]/80 hover:text-[#778DA9] transition-colors duration-300 flex items-center gap-2"
                                        aria-label={ariaLabel}
                                    >
                                        <span class="h-1 w-1 rounded-full bg-[#778DA9]" />
                                        {label}
                                    </a>
                                </li>
                            ))}
                        </ul>
                    </div>
                ))
            }

            <!-- Contact Information -->
            <div class="space-y-6">
                <h4 class="text-lg font-semibold text-[#E0E1DD]">Contacto</h4>
                <ul class="space-y-4">
                    {
                        contactInfo.map(({ title, text, icon, href }) => (
                            <li>
                                <a
                                    href={href}
                                    class="group flex items-center gap-3 text-[#E0E1DD]/80 hover:text-[#778DA9] 
                                    transition-colors duration-300"
                                    target="_blank"
                                    rel="noopener noreferrer"
                                >
                                    <div
                                        class="w-10 h-10 rounded-lg bg-[#0D1B2A]/50 flex items-center justify-center
                                    group-hover:bg-[#415A77]/30 transition-colors duration-300"
                                    >
                                        <svg
                                            class="w-5 h-5 text-[#778DA9] group-hover:text-[#E0E1DD] 
                                            transition-colors duration-300"
                                            fill="none"
                                            stroke="currentColor"
                                            viewBox="0 0 24 24"
                                            set:html={icon}
                                        />
                                    </div>
                                    <div>
                                        <span class="block text-sm font-medium text-[#E0E1DD]">
                                            {title}
                                        </span>
                                        <span class="text-sm">{text}</span>
                                    </div>
                                </a>
                            </li>
                        ))
                    }
                </ul>
            </div>
        </div>

        <!-- Bottom Bar -->
        <div class="mt-12 pt-8 border-t border-[#0D1B2A]/50">
            <div class="flex flex-col md:flex-row items-center justify-between">
                <p class="text-[#E0E1DD]/70 text-sm">
                    © {new Date().getFullYear()} Nexen. Todos los derechos reservados.
                </p>

                <!-- Social Media Links -->
                <div class="flex items-center space-x-4 mt-4 md:mt-0">
                    {
                        socialLinks.map(({ href, label, icon }) => (
                            <a
                                href={href}
                                class="text-[#778DA9] hover:text-[#E0E1DD] transition-colors duration-300"
                                aria-label={label}
                                target="_blank"
                                rel="noopener noreferrer"
                            >
                                <svg
                                    class="w-5 h-5"
                                    fill="currentColor"
                                    viewBox="0 0 24 24"
                                    set:html={icon}
                                />
                            </a>
                        ))
                    }
                </div>
            </div>
        </div>
    </div>
</footer>
