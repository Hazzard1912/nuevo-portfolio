---
import { Image } from "astro:assets";
import Button from "../ui/Button.astro";
import sistemaInventario from "../assets/sistema_inventario.png";
import carnivorousLogo from "../assets/carnivourusland.png";
import multimueblesLogo from "../assets/galeriamultimuebles.png";
import crmLogo from "../assets/crmdemo.png";

// Sample projects data with reused image and details (as requested)
const projects = [
    {
        title: "Sistema de Gestión de Inventario",
        description:
            "Solución empresarial para gestión de inventarios en tiempo real con arquitectura serverless.",
        image: sistemaInventario,
        tags: ["Next.js", "TailwindCSS", "Vercel"],
        featured: true,
        demoUrl: "https://inventory-system-demo.vercel.app/",
    },
    {
        title: "Carnivorous Land",
        description:
            "Tienda virtual de plantas carnívoras en Colombia. Envíos nacionales, asesoría y calidad garantizada.",
        image: carnivorousLogo,
        tags: ["E-commerce", "Colombia", "Plantas"],
        featured: false,
        demoUrl: "https://carnivorousland.com",
    },
    {
        title: "Galería Multimuebles",
        description:
            "Catálogo online de muebles y decoración para el hogar. Diseño moderno y navegación intuitiva.",
        image: multimueblesLogo,
        tags: ["Catálogo", "Muebles", "Hogar"],
        featured: false,
        demoUrl: "https://galeriamultimuebles.com",
    },
    {
        title: "CRM Demo",
        description:
            "Dashboard CRM para gestión de clientes, ventas y actividades. Visualización de datos y recordatorios.",
        image: crmLogo,
        tags: ["CRM", "Dashboard", "Demo"],
        featured: false,
        demoUrl: "https://crm-demo-six.vercel.app",
    },
];

// Separating featured project from regular projects
const featuredProject = projects.find((project) => project.featured);
const regularProjects = projects.filter((project) => !project.featured);
---

<section id="portfolio" class="py-24 relative bg-[#E0E1DD] overflow-hidden">
    <div class="container mx-auto px-4 relative">
        <!-- Header Section -->
        <div class="text-center mb-16" data-aos="fade-up">
            <span
                class="text-[#415A77] font-medium mb-4 block tracking-wider uppercase text-sm"
            >
                NUESTRO PORTFOLIO
            </span>
            <h2 class="text-3xl md:text-5xl font-bold text-[#0D1B2A] mb-6">
                Proyectos <span
                    class="text-transparent bg-clip-text bg-gradient-to-r from-[#415A77] to-[#778DA9]"
                    >Destacados</span
                >
            </h2>
            <p class="text-xl text-[#1B263B] max-w-3xl mx-auto leading-relaxed">
                Soluciones digitales a medida para empresas que buscan destacar
                y optimizar sus procesos
            </p>
        </div>

        <!-- Featured Project (Full Width) -->
        {
            featuredProject && (
                <div class="mb-12" data-aos="fade-up">
                    <div class="group relative bg-white rounded-2xl shadow-xl overflow-hidden flex flex-col md:flex-row transition-all duration-300 hover:shadow-2xl">
                        <div class="relative w-full md:w-1/2">
                            <Image
                                src={featuredProject.image}
                                alt={featuredProject.title}
                                class="w-full h-64 md:h-full object-cover transition-transform duration-500 group-hover:scale-105"
                                width={800}
                                height={500}
                                loading="eager"
                            />
                        </div>
                        <div class="p-6 md:p-8 flex flex-col flex-1 justify-center">
                            <div class="mb-2 flex items-center">
                                <span class="bg-gradient-to-r from-[#415A77] to-[#778DA9] text-white text-xs font-medium px-3 py-1 rounded-full mr-2">
                                    Destacado
                                </span>
                                <h3 class="text-2xl md:text-3xl font-bold text-[#0D1B2A] group-hover:text-[#415A77] transition-colors duration-300">
                                    {featuredProject.title}
                                </h3>
                            </div>
                            <p class="text-[#1B263B] mb-6 text-lg">
                                {featuredProject.description}
                            </p>
                            <div class="flex flex-wrap gap-2 mb-6">
                                {featuredProject.tags.map((tag) => (
                                    <span class="px-3 py-1 bg-gradient-to-r from-[#E0E1DD] to-[#778DA9]/10 text-[#1B263B] text-sm rounded-md shadow-sm">
                                        {tag}
                                    </span>
                                ))}
                            </div>
                            <div class="mt-4">
                                <a
                                    href={featuredProject.demoUrl}
                                    target="_blank"
                                    rel="noopener noreferrer"
                                >
                                    <Button
                                        text="Ver proyecto destacado"
                                        hasIcon
                                        className="bg-[#415A77] hover:bg-[#1B263B] text-[#E0E1DD] border-0 transition-transform duration-300 hover:scale-105"
                                    />
                                </a>
                            </div>
                        </div>
                        <div class="absolute inset-0 pointer-events-none rounded-2xl border-2 border-transparent group-hover:border-[#415A77] transition-all duration-300" />
                    </div>
                </div>
            )
        }

        <!-- Regular Projects Grid -->
        <div
            class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8"
        >
            {
                regularProjects.map((project) => (
                    <div class="group relative bg-white rounded-2xl shadow-xl overflow-hidden flex flex-col transition-all duration-300 hover:z-10 hover:shadow-2xl">
                        <div class="relative">
                            <Image
                                src={project.image}
                                alt={project.title}
                                class="w-full h-48 object-cover transition-transform duration-500 group-hover:scale-110"
                                width={600}
                                height={200}
                                loading="lazy"
                            />
                        </div>
                        <div class="p-6 flex flex-col flex-1 transition-all duration-300">
                            <h3 class="text-xl font-bold text-[#0D1B2A] mb-2 group-hover:text-[#415A77] transition-colors duration-300">
                                {project.title}
                            </h3>
                            <p class="text-[#1B263B] mb-4 line-clamp-3 group-hover:line-clamp-none group-hover:mb-6 transition-all duration-300">
                                {project.description}
                            </p>
                            <div class="flex flex-wrap gap-2 mb-4">
                                {project.tags.map((tag) => (
                                    <span class="px-3 py-1 bg-gradient-to-r from-[#E0E1DD] to-[#778DA9]/10 text-[#1B263B] text-xs rounded-md shadow-sm">
                                        {tag}
                                    </span>
                                ))}
                            </div>
                            <div class="mt-auto project-button">
                                <a
                                    href={project.demoUrl}
                                    target="_blank"
                                    rel="noopener noreferrer"
                                >
                                    <Button
                                        text="Ver proyecto"
                                        hasIcon
                                        className="bg-[#415A77] hover:bg-[#1B263B] text-[#E0E1DD] border-0 w-full transition-transform duration-300 hover:scale-105"
                                    />
                                </a>
                            </div>
                        </div>
                        <div class="absolute inset-0 pointer-events-none rounded-2xl border-2 border-transparent group-hover:border-[#415A77] transition-all duration-300" />
                    </div>
                ))
            }
        </div>

        <!-- View All Projects Button -->
        <div class="mt-16 text-center" data-aos="fade-up">
            <Button
                text="Ver todos los proyectos"
                href="/portfolio"
                className="bg-[#415A77] hover:bg-[#1B263B] text-[#E0E1DD] shadow-lg shadow-[#415A77]/10 border-0"
            />
        </div>
    </div>
</section>

<style>
    .line-clamp-3 {
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    /* On desktop, hide buttons until hover */
    @media (min-width: 768px) {
        .project-button {
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .group:hover .project-button {
            opacity: 1;
        }
    }

    /* On mobile, always show buttons */
    @media (max-width: 767px) {
        .project-button {
            opacity: 1;
        }
    }
</style>

<script>
    // Esperar a que el DOM esté listo
    document.addEventListener("DOMContentLoaded", () => {
        const track = document.querySelector(".slider-track");
        const dots = document.querySelectorAll(
            ".slider-container + div button",
        );

        let currentIndex = 0;

        function updateSlider() {
            if (!track) return;
            track.style.transform = `translateX(-${currentIndex * 100}%)`;
            dots.forEach((dot, index) => {
                if (dot) {
                    dot.classList.toggle(
                        "bg-[#415A77]",
                        index === currentIndex,
                    );
                    dot.classList.toggle(
                        "bg-[#415A77]/30",
                        index !== currentIndex,
                    );
                }
            });
        }
    });
</script>
