---
import { Image } from "astro:assets";
import Button from "../ui/Button.astro";
import sistemaInventario from "../assets/sistema_inventario.png";

// Sample projects data with reused image and details (as requested)
const projects = [
    {
        title: "Sistema de Gestión de Inventario",
        description:
            "Solución empresarial para gestión de inventarios en tiempo real con arquitectura serverless.",
        image: sistemaInventario,
        tags: ["Next.js", "TailwindCSS", "Vercel"],
        featured: true,
        demoUrl: "https://inventory-system-demo.vercel.app/",
        stats: {
            costReduction: "50%",
            efficiencyIncrease: "30%",
        },
    },
    {
        title: "Plataforma E-commerce",
        description:
            "Tienda online con interfaz personalizada, pagos integrados y gestión de productos eficiente.",
        image: sistemaInventario, // Reusing image as requested
        tags: ["React", "Node.js", "MongoDB"],
        featured: false,
        demoUrl: "https://inventory-system-demo.vercel.app/",
    },
    {
        title: "Aplicación de Finanzas Personales",
        description:
            "App para seguimiento de gastos e ingresos con analíticas y planificación financiera.",
        image: sistemaInventario, // Reusing image as requested
        tags: ["Vue.js", "Firebase", "TailwindCSS"],
        featured: false,
        demoUrl: "https://inventory-system-demo.vercel.app/",
    },
];
---

<section id="portfolio" class="py-24 relative bg-[#E0E1DD]">
    <div class="container mx-auto px-4 relative">
        <!-- Header Section -->
        <div class="text-center mb-16" data-aos="fade-up">
            <span
                class="text-[#415A77] font-medium mb-4 block tracking-wider uppercase text-sm"
                >NUESTRO PORTFOLIO</span
            >
            <h2 class="text-3xl md:text-5xl font-bold text-[#0D1B2A] mb-6">
                Proyectos <span
                    class="text-transparent bg-clip-text bg-gradient-to-r from-[#415A77] to-[#778DA9]"
                    >Destacados</span
                >
            </h2>
            <p class="text-xl text-[#1B263B] max-w-3xl mx-auto leading-relaxed">
                Soluciones digitales a medida para empresas que buscan destacar
                y optimizar sus procesos
            </p>
        </div>

        <!-- Featured Project (Larger) -->
        {
            projects[0] && (
                <div class="mb-16" data-aos="fade-up">
                    <div class="grid md:grid-cols-2 gap-8 items-center">
                        <div class="order-2 md:order-1">
                            <div class="mb-4">
                                <div class="flex items-center gap-2 mb-4">
                                    <span class="px-3 py-1 bg-[#415A77]/10 text-[#415A77] text-sm font-medium rounded-full">
                                        Proyecto Destacado
                                    </span>
                                </div>
                                <h3 class="text-2xl md:text-3xl font-bold text-[#0D1B2A] mb-3">
                                    {projects[0].title}
                                </h3>
                                <p class="text-[#1B263B] text-lg mb-6">
                                    {projects[0].description}
                                </p>

                                {projects[0].stats && (
                                    <div class="grid grid-cols-2 gap-4 mb-6">
                                        <div class="p-4 bg-white rounded-lg border border-[#778DA9]/20 shadow-sm">
                                            <div class="text-2xl font-bold text-[#415A77]">
                                                {
                                                    projects[0].stats
                                                        .costReduction
                                                }
                                            </div>
                                            <p class="text-[#1B263B]">
                                                Reducción de costos
                                            </p>
                                        </div>
                                        <div class="p-4 bg-white rounded-lg border border-[#778DA9]/20 shadow-sm">
                                            <div class="text-2xl font-bold text-[#415A77]">
                                                {
                                                    projects[0].stats
                                                        .efficiencyIncrease
                                                }
                                            </div>
                                            <p class="text-[#1B263B]">
                                                Aumento de eficiencia
                                            </p>
                                        </div>
                                    </div>
                                )}

                                <div class="flex flex-wrap gap-2 mb-6">
                                    {projects[0].tags.map((tag) => (
                                        <span class="px-3 py-1 bg-[#1B263B]/10 text-[#1B263B] text-sm rounded-md">
                                            {tag}
                                        </span>
                                    ))}
                                </div>

                                <Button
                                    text="Ver proyecto"
                                    href={projects[0].demoUrl}
                                    hasIcon
                                    className="bg-[#415A77] hover:bg-[#1B263B] text-[#E0E1DD] border-0"
                                />
                            </div>
                        </div>

                        <div class="order-1 md:order-2">
                            <a
                                href={projects[0].demoUrl}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="block overflow-hidden rounded-xl border border-[#778DA9]/20 shadow-xl 
                            transition-all duration-300 group hover:shadow-2xl hover:shadow-[#415A77]/10 hover:-translate-y-1"
                            >
                                <div class="relative">
                                    <Image
                                        src={projects[0].image}
                                        alt={projects[0].title}
                                        width={600}
                                        height={400}
                                        format="webp"
                                        class="w-full transition-transform duration-500 group-hover:scale-105"
                                    />
                                    <div class="absolute inset-0 bg-gradient-to-t from-[#0D1B2A]/70 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end">
                                        <div class="p-4 text-[#E0E1DD]">
                                            <span class="flex items-center gap-2">
                                                <span>Ver demo</span>
                                                <svg
                                                    xmlns="http://www.w3.org/2000/svg"
                                                    class="h-5 w-5 transform group-hover:translate-x-1 transition-transform"
                                                    fill="none"
                                                    viewBox="0 0 24 24"
                                                    stroke="currentColor"
                                                >
                                                    <path
                                                        stroke-linecap="round"
                                                        stroke-linejoin="round"
                                                        stroke-width="2"
                                                        d="M14 5l7 7m0 0l-7 7m7-7H3"
                                                    />
                                                </svg>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            )
        }

        <!-- Other Projects Grid -->
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
            {
                projects.slice(1).map((project, index) => (
                    <div
                        class="bg-white rounded-xl overflow-hidden border border-[#778DA9]/10 shadow-lg transition-all duration-300 hover:-translate-y-2 hover:shadow-xl hover:shadow-[#415A77]/5 group"
                        data-aos="fade-up"
                        data-aos-delay={index * 100}
                    >
                        <div class="relative">
                            <Image
                                src={project.image}
                                alt={project.title}
                                width={400}
                                height={250}
                                format="webp"
                                class="w-full h-48 object-cover transition-transform duration-500 group-hover:scale-105"
                            />
                            <div class="absolute inset-0 bg-gradient-to-t from-[#0D1B2A]/80 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end">
                                <div class="p-4 text-[#E0E1DD]">
                                    <span class="flex items-center gap-2">
                                        <span>Ver proyecto</span>
                                        <svg
                                            xmlns="http://www.w3.org/2000/svg"
                                            class="h-5 w-5 transform group-hover:translate-x-1 transition-transform"
                                            fill="none"
                                            viewBox="0 0 24 24"
                                            stroke="currentColor"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M14 5l7 7m0 0l-7 7m7-7H3"
                                            />
                                        </svg>
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div class="p-6">
                            <h3 class="text-xl font-bold text-[#0D1B2A] mb-3 group-hover:text-[#415A77] transition-colors duration-300">
                                {project.title}
                            </h3>
                            <p class="text-[#1B263B] mb-4">
                                {project.description}
                            </p>

                            <div class="flex flex-wrap gap-2 mb-5">
                                {project.tags.map((tag) => (
                                    <span class="px-2 py-1 bg-[#1B263B]/5 text-[#1B263B] text-xs rounded">
                                        {tag}
                                    </span>
                                ))}
                            </div>

                            <a
                                href={project.demoUrl}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="inline-flex items-center text-[#415A77] font-medium hover:text-[#1B263B] transition-colors duration-300"
                            >
                                Ver detalles
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    class="h-5 w-5 ml-1 group-hover:translate-x-1 transition-transform"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M14 5l7 7m0 0l-7 7m7-7H3"
                                    />
                                </svg>
                            </a>
                        </div>
                    </div>
                ))
            }
        </div>

        <!-- View All Projects Button -->
        <div class="mt-16 text-center" data-aos="fade-up">
            <Button
                text="Ver todos los proyectos"
                href="/portfolio"
                className="bg-[#415A77] hover:bg-[#1B263B] text-[#E0E1DD] shadow-lg shadow-[#415A77]/10 border-0"
            />
        </div>
    </div>
</section>
