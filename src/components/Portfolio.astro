---
import { Image } from "astro:assets";
import Button from "../ui/Button.astro";
import sistemaInventario from "../assets/sistema_inventario.png";
import carnivorousLogo from "../assets/carnivourusland.png";
import multimueblesLogo from "../assets/galeriamultimuebles.png";
import crmLogo from "../assets/crmdemo.png";

// Sample projects data with reused image and details (as requested)
const projects = [
    {
        title: "Sistema de Gestión de Inventario",
        description:
            "Solución empresarial para gestión de inventarios en tiempo real con arquitectura serverless.",
        image: sistemaInventario,
        tags: ["Next.js", "TailwindCSS", "Vercel"],
        featured: true,
        demoUrl: "https://inventory-system-demo.vercel.app/",
    },
    {
        title: "Carnivorous Land",
        description:
            "Tienda virtual de plantas carnívoras en Colombia. Envíos nacionales, asesoría y calidad garantizada.",
        image: carnivorousLogo,
        tags: ["E-commerce", "Colombia", "Plantas"],
        featured: false,
        demoUrl: "https://carnivorousland.com",
    },
    {
        title: "Galería Multimuebles",
        description:
            "Catálogo online de muebles y decoración para el hogar. Diseño moderno y navegación intuitiva.",
        image: multimueblesLogo,
        tags: ["Catálogo", "Muebles", "Hogar"],
        featured: false,
        demoUrl: "https://galeriamultimuebles.com",
    },
    {
        title: "CRM Demo",
        description:
            "Dashboard CRM para gestión de clientes, ventas y actividades. Visualización de datos y recordatorios.",
        image: crmLogo,
        tags: ["CRM", "Dashboard", "Demo"],
        featured: false,
        demoUrl: "https://crm-demo-six.vercel.app",
    },
];
---

<section id="portfolio" class="py-24 relative bg-[#E0E1DD] overflow-hidden">
    <div class="container mx-auto px-4 relative">
        <!-- Header Section -->
        <div class="text-center mb-16" data-aos="fade-up">
            <span class="text-[#415A77] font-medium mb-4 block tracking-wider uppercase text-sm">
                NUESTRO PORTFOLIO
            </span>
            <h2 class="text-3xl md:text-5xl font-bold text-[#0D1B2A] mb-6">
                Proyectos <span class="text-transparent bg-clip-text bg-gradient-to-r from-[#415A77] to-[#778DA9]">Destacados</span>
            </h2>
            <p class="text-xl text-[#1B263B] max-w-3xl mx-auto leading-relaxed">
                Soluciones digitales a medida para empresas que buscan destacar y optimizar sus procesos
            </p>
        </div>

        <!-- Grid con Hover Expandible -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
            {projects.map((project, index) => (
                <div class="group relative bg-white rounded-2xl shadow-xl overflow-hidden flex flex-col transition-all duration-300 hover:z-10 hover:scale-105 hover:shadow-2xl">
                    <div class="relative">
                        <Image
                            src={project.image}
                            alt={project.title}
                            class="w-full h-48 object-cover transition-transform duration-500 group-hover:scale-110"
                            width={600}
                            height={200}
                            loading="lazy"
                        />
                        <div class="absolute top-4 right-4 z-10">
                            <a href={project.demoUrl} target="_blank" rel="noopener noreferrer" class="bg-white/80 rounded-full p-2 shadow hover:bg-[#415A77] hover:text-[#E0E1DD] transition-colors duration-300" title="Visitar sitio">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" /></svg>
                            </a>
                        </div>
                    </div>
                    <div class="p-6 flex flex-col flex-1 transition-all duration-300">
                        <h3 class="text-xl font-bold text-[#0D1B2A] mb-2 group-hover:text-[#415A77] transition-colors duration-300">
                            {project.title}
                        </h3>
                        <p class="text-[#1B263B] mb-4 line-clamp-3 group-hover:line-clamp-none group-hover:mb-6 transition-all duration-300">
                            {project.description}
                        </p>
                        <div class="flex flex-wrap gap-2 mb-4">
                            {project.tags.map((tag) => (
                                <span class="px-3 py-1 bg-gradient-to-r from-[#E0E1DD] to-[#778DA9]/10 text-[#1B263B] text-xs rounded-md shadow-sm">
                                    {tag}
                                </span>
                            ))}
                        </div>
                        <div class="mt-auto opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                            <a href={project.demoUrl} target="_blank" rel="noopener noreferrer">
                                <Button
                                    text="Ver proyecto"
                                    hasIcon
                                    className="bg-[#415A77] hover:bg-[#1B263B] text-[#E0E1DD] border-0 w-full transition-transform duration-300 hover:scale-105"
                                />
                            </a>
                        </div>
                    </div>
                    <div class="absolute inset-0 pointer-events-none rounded-2xl border-2 border-transparent group-hover:border-[#415A77] transition-all duration-300"></div>
                </div>
            ))}
        </div>

        <!-- View All Projects Button -->
        <div class="mt-16 text-center" data-aos="fade-up">
            <Button
                text="Ver todos los proyectos"
                href="/portfolio"
                className="bg-[#415A77] hover:bg-[#1B263B] text-[#E0E1DD] shadow-lg shadow-[#415A77]/10 border-0"
            />
        </div>
    </div>
</section>

<style>
.line-clamp-3 {
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
</style>

<script>
    // Esperar a que el DOM esté listo
    document.addEventListener('DOMContentLoaded', () => {
        const track = document.querySelector('.slider-track');
        const slides = document.querySelectorAll('.slider-slide');
        const prevButton = document.querySelector('.slider-prev');
        const nextButton = document.querySelector('.slider-next');
        const dots = document.querySelectorAll('.slider-container + div button');
        
        let currentIndex = 0;
        
        function updateSlider() {
            if (!track) return;
            track.style.transform = `translateX(-${currentIndex * 100}%)`;
            dots.forEach((dot, index) => {
                if (dot) {
                    dot.classList.toggle('bg-[#415A77]', index === currentIndex);
                    dot.classList.toggle('bg-[#415A77]/30', index !== currentIndex);
                }
            });
        }
        
        prevButton?.addEventListener('click', () => {
            currentIndex = Math.max(currentIndex - 1, 0);
            updateSlider();
        });
        
        nextButton?.addEventListener('click', () => {
            currentIndex = Math.min(currentIndex + 1, slides.length - 1);
            updateSlider();
        });
        
        dots.forEach((dot, index) => {
            dot?.addEventListener('click', () => {
                currentIndex = index;
                updateSlider();
            });
        });

        // Inicializar el slider
        updateSlider();
    });
</script>
