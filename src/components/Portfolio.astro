---
import { Image } from "astro:assets";

const projectData = {
    meta: {
        tag: "Proyecto Destacado",
        year: "2025",
        title: "E-commerce de Alto Rendimiento",
        subtitle: "Transformación digital completa para una marca líder en moda sostenible"
    },
    image: {
        src: "https://images.unsplash.com/photo-1600267185393-e158a98703de?auto=format&fit=crop&w=2070&q=80",
        width: 2070,
        height: 1380,
        alt: "E-commerce Project"
    },
    solution: {
        features: [
            "Sistema de pago multi-moneda",
            "Panel de administración personalizado",
            "Integración con sistemas de inventario"
        ],
        technologies: ["Next.js", "Tailwind CSS", "Stripe"]
    },
    results: {
        stats: [
            { value: "300%", label: "Incremento en ventas online" },
            { value: "-40%", label: "Reducción en costos operativos" }
        ],
        improvements: [
            "Automatización de procesos de pedidos",
            "Expansión a mercados internacionales"
        ]
    }
};

const CheckIcon = `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>`;
---

<section id="portfolio" class="py-20 relative min-h-screen bg-gradient-to-b from-slate-950 to-slate-900">
    <div class="container mx-auto px-4 relative">
        <div class="text-center mb-12">
            <div class="inline-flex items-center gap-3 px-4 py-2 rounded-full bg-slate-800/50 border border-slate-700/50 mb-6">
                <span class="text-gray-300">{projectData.meta.tag}</span>
                <span class="w-1 h-1 rounded-full bg-slate-600"></span>
                <span class="text-gray-300">{projectData.meta.year}</span>
            </div>
            <h2 class="text-3xl md:text-5xl font-bold text-white mb-6">
                {projectData.meta.title}
            </h2>
            <p class="text-gray-300 max-w-3xl mx-auto text-xl">
                {projectData.meta.subtitle}
            </p>
        </div>

        <div class="max-w-5xl mx-auto">
            <!-- Project Image -->
            <div class="rounded-xl overflow-hidden mb-12 border border-slate-800/50">
                <Image
                    src={projectData.image.src}
                    width={projectData.image.width}
                    height={projectData.image.height}
                    alt={projectData.image.alt}
                    class="w-full"
                    loading="lazy"
                    decoding="async"
                />
            </div>

            <!-- Project Details -->
            <div class="grid md:grid-cols-2 gap-8">
                <!-- Solution -->
                <div class="space-y-6">
                    <div class="inline-block px-4 py-2 rounded-lg bg-blue-500/10 border border-blue-500/20">
                        <span class="text-blue-400 font-medium">Solución Implementada</span>
                    </div>

                    <ul class="space-y-3">
                        {projectData.solution.features.map(feature => (
                            <li class="flex items-center gap-3 text-gray-300">
                                <svg class="w-5 h-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={CheckIcon}/>
                                {feature}
                            </li>
                        ))}
                    </ul>

                    <div class="flex flex-wrap gap-2">
                        {projectData.solution.technologies.map(tech => (
                            <span class="px-3 py-1 bg-blue-500/10 text-blue-400 rounded-full text-sm border border-blue-500/20">
                                {tech}
                            </span>
                        ))}
                    </div>
                </div>

                <!-- Results -->
                <div class="space-y-6">
                    <div class="inline-block px-4 py-2 rounded-lg bg-purple-500/10 border border-purple-500/20">
                        <span class="text-purple-400 font-medium">Resultados</span>
                    </div>

                    <div class="grid grid-cols-2 gap-4">
                        {projectData.results.stats.map(stat => (
                            <div class="p-4 bg-slate-800/50 rounded-lg border border-slate-700/50">
                                <div class="text-2xl font-bold text-white mb-1">{stat.value}</div>
                                <p class="text-gray-400 text-md">{stat.label}</p>
                            </div>
                        ))}
                    </div>

                    <ul class="space-y-3">
                        {projectData.results.improvements.map(improvement => (
                            <li class="flex items-center gap-3 text-gray-300">
                                <svg class="w-5 h-5 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={CheckIcon}/>
                                {improvement}
                            </li>
                        ))}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>