---
const processSteps = [
    {
        number: "01",
        title: "Análisis y Estrategia",
        description:
            "Analizamos tus necesidades y definimos la mejor estrategia para tu proyecto digital.",
        features: [
            "Investigación y análisis de mercado",
            "Definición de objetivos y KPIs",
            "Planificación técnica detallada",
        ],
        gradient: "from-[#415A77] to-[#778DA9]",
        delay: "0",
    },
    {
        number: "02",
        title: "Diseño UX/UI",
        description:
            "Creamos experiencias digitales intuitivas y atractivas centradas en el usuario.",
        features: [
            "Arquitectura de información",
            "Diseño de interfaces moderno",
            "Prototipos interactivos",
        ],
        gradient: "from-[#1B263B] to-[#415A77]",
        delay: "150",
    },
    {
        number: "03",
        title: "Desarrollo",
        description:
            "Implementamos tu solución con las últimas tecnologías y mejores prácticas.",
        features: [
            "Desarrollo frontend y backend",
            "Optimización de rendimiento",
            "Integración de servicios",
        ],
        gradient: "from-[#0D1B2A] to-[#1B263B]",
        delay: "300",
    },
    {
        number: "04",
        title: "Lanzamiento",
        description:
            "Desplegamos tu proyecto asegurando calidad y rendimiento óptimo.",
        features: [
            "Testing y control de calidad",
            "Optimización SEO",
            "Monitorización continua",
        ],
        gradient: "from-[#1B263B] to-[#415A77]",
        delay: "450",
    },
];
---

<section id="proceso" class="relative py-24 bg-[#0D1B2A]">
    <div
        class="absolute inset-0 bg-gradient-to-b from-[#0D1B2A] to-[#1B263B] opacity-90"
    >
    </div>

    <div class="container mx-auto px-4 relative">
        <div class="text-center mb-20" data-aos="fade-up">
            <span
                class="text-[#778DA9] font-medium mb-4 block tracking-wider text-sm uppercase"
                >METODOLOGÍA</span
            >
            <h2 class="text-3xl md:text-5xl font-bold text-[#E0E1DD] mb-6">
                Proceso de <span
                    class="text-transparent bg-clip-text bg-gradient-to-r from-[#778DA9] to-[#E0E1DD]"
                    >Desarrollo</span
                >
            </h2>
            <p
                class="text-lg md:text-xl text-[#E0E1DD]/80 max-w-2xl mx-auto leading-relaxed"
            >
                Un enfoque estructurado y ágil para transformar tu visión en
                realidad digital
            </p>
        </div>

        <div class="max-w-6xl mx-auto">
            <div class="grid md:grid-cols-2 gap-6 md:gap-8">
                {
                    processSteps.map((step) => (
                        <div
                            class="relative group"
                            data-aos="fade-up"
                            data-aos-delay={step.delay}
                        >
                            <div
                                class="bg-[#1B263B]/80 rounded-xl p-6 md:p-8 border border-[#415A77]/20 
                            transition-all duration-500 h-full
                            hover:bg-[#1B263B] hover:border-[#778DA9]/30 
                            hover:shadow-2xl hover:shadow-[#415A77]/10 
                            hover:-translate-y-2 will-change-transform"
                            >
                                <div class="flex items-start gap-6">
                                    <div
                                        class={`flex items-center justify-center w-14 h-14 rounded-xl 
                                    bg-gradient-to-br ${step.gradient} bg-opacity-20 
                                    transition-transform duration-500 group-hover:scale-110`}
                                    >
                                        <span class="text-2xl font-bold text-[#E0E1DD]">
                                            {step.number}
                                        </span>
                                    </div>

                                    <div class="flex-1">
                                        <h3
                                            class="text-xl md:text-2xl font-bold text-[#E0E1DD] mb-3 
                                        transition-colors duration-300 group-hover:text-[#778DA9]"
                                        >
                                            {step.title}
                                        </h3>
                                        <p class="text-[#E0E1DD]/70 text-base md:text-lg mb-6 leading-relaxed">
                                            {step.description}
                                        </p>

                                        <ul class="space-y-3">
                                            {step.features.map((feature) => (
                                                <li
                                                    class="flex items-center gap-3 text-[#E0E1DD]/60 
                                                transition-colors duration-300 group-hover:text-[#E0E1DD]/90"
                                                >
                                                    <svg
                                                        class="w-5 h-5 text-[#778DA9]"
                                                        viewBox="0 0 24 24"
                                                        fill="none"
                                                        stroke="currentColor"
                                                    >
                                                        <path
                                                            stroke-linecap="round"
                                                            stroke-linejoin="round"
                                                            stroke-width="2"
                                                            d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                                                        />
                                                    </svg>
                                                    <span>{feature}</span>
                                                </li>
                                            ))}
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </div>
</section>
